@model LookIT.Models.Collection

@{
    ViewData["Title"] = "Editare colecție";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

                <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                    @* Iconiță Magenta *@
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3" style="width: 64px; height: 64px; background-color: #FBF1F7;">
                        <i class="bi bi-pencil-square fs-2" style="color: #B13079;"></i>
                    </div>
                    <h4 class="fw-bold mb-1">Editează colecția</h4>
                    <p class="text-muted small">Schimbă denumirea acestui folder.</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" asp-controller="Collections" method="post">

                        <input type="hidden" asp-for="CollectionId" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label small text-muted fw-bold ms-1">NUME COLECȚIE</label>

                            @* Stil Input consistent cu restul aplicației *@
                            <div class="input-group">
                                <span class="input-group-text border-0 rounded-start-3 ps-3">
                                    <i class="bi bi-fonts"></i>
                                </span>
                                <input asp-for="Name" class="form-control custom-input-bg border-0 rounded-end-3 py-2" placeholder="Nume nou..." autocomplete="off" />
                            </div>

                            <span asp-validation-for="Name" class="text-danger small mt-1 d-block ms-1"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            @* Buton Salvare (Magenta) *@
                            <button type="submit" class="btn btn-primary rounded-pill py-2 fw-bold shadow-sm">
                                <i class="bi bi-check-lg me-1"></i> Salvează modificările
                            </button>

                            @* Buton Anulare *@
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill py-2 fw-bold shadow-sm">
                                Anulează
                            </a>
                        </div>

                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted small">
                    <i class="bi bi-info-circle me-1"></i> Postările salvate în această colecție nu vor fi afectate.
                </p>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}