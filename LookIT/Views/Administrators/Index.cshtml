@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager

@{
    ViewBag.Title = "Index";
}


@if (ViewBag.message != null)
{
    <h4 class="alert rounded-3 text-center mb-5"
        style="background-color: #90C67F; color: #845763; border: 1px solid #92E4BA; padding: 1rem;">
        @ViewBag.message
    </h4>
}

@foreach (var user in ViewBag.Users)
{
    <div class="card mb-3" style="background-color: #F8F6F7; border-left: 5px solid #92E4BA; box-shadow: 0 2px 4px rgba(132, 87, 99, 0.1); border-radius: 0.5rem;">

        <div class="card-body">

            <h5 class="card-title" style="color: #845763; font-weight: bold;">@user.UserName</h5>

            <div class="card-text">
                <p><strong>ID:</strong> @user.Id</p>
                <p><strong>Email:</strong> @user.Email</p>

            </div>

            <hr style="border-top: 1px solid #90C67F; opacity: 0.7;" />

            @if (!await UserManager.IsInRoleAsync(user, "Administrator"))
            {
                <form asp-controller="Administrators" asp-action="PromoteToAdms" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@user.Id" />

                    <button type="submit" class="btn btn-sm"
                            style="background-color: #92E4BA; border-color: #90C67F; color: #845763; font-weight: 500;"
                            onclick="return confirm('! ATENȚIE !\nDORITI SA FACETI UTILIZATORUL -ADMIN- ?\n ACEASTA ACTIUNE ESTE IREVERSIBILA.');">
                        Upgrade la Admin
                    </button>
                </form>
            }
            else
            {
                <span class="badge" style="background-color: #90C67F; color: #845763; padding: 0.5em 0.8em; font-size: 0.9em;"> Administrator</span>
            }

            <form asp-controller="Administrators" asp-action="DeleteUser" method="post" style="display:inline;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@user.Id" />

                <button type="submit" class="btn btn-sm"
                        style="background-color: #E491A6; border-color: #845763; color: #845763; font-weight: 500;"
                        onclick="return confirm('! ATENȚIE !\nDORITI SA STERGETI UTILIZATORUL?\n ACEASTA ACTIUNE ESTE IREVERSIBILA.');">
                    Stergere Utilizator
                </button>
            </form>

        </div>

    </div>

    <br />
}

