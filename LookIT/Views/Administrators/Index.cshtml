@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager

@{
    ViewBag.Title = "Gestionare Utilizatori";
}

@* Mesaj de alertă stil Facebook (Albastru) *@
@if (ViewBag.message != null)
{
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="alert alert-primary alert-dismissible fade show border-0 shadow-sm text-center py-2 px-4"
                     role="alert" style="background-color: #e7f3ff; color: #1877f2; border-radius: 8px;">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    <span style="font-size: 0.95rem; font-weight: 500;">@ViewBag.message</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h2 class="fw-bold" style="color: #1c1e21;">Control Utilizatori</h2>
        <p class="text-muted">Administrează membrii și permisiunile platformei</p>
    </div>

    @foreach (var user in ViewBag.Users)
    {
        <div class="card mb-3 mx-auto border-0 shadow-sm" style="max-width: 600px; border-radius: 8px;">
            <div class="card-body p-3">
                <div class="d-flex align-items-center mb-3">
                    @* Avatar Placeholder *@
                    <div class="rounded-circle d-flex align-items-center justify-content-center"
                         style="width: 45px; height: 45px; background-color: #f0f2f5; color: #65676b;">
                        <i class="bi bi-person-fill" style="font-size: 1.3rem;"></i>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0 fw-bold" style="color: #050505;">@user.UserName</h6>
                        <small class="text-muted" style="font-size: 0.8rem;">ID: @user.Id</small>
                    </div>
                </div>

                <div class="p-2 mb-3 rounded-2" style="background-color: #f8f9fa;">
                    <p class="mb-0 text-dark small"><strong><i class="bi bi-envelope me-2"></i>Email:</strong> @user.Email</p>
                </div>

                <div class="d-flex gap-2 pt-2 border-top">
                    @* Buton Upgrade Admin *@
                    @if (!await UserManager.IsInRoleAsync(user, "Administrator"))
                    {
                        <form asp-controller="Administrators" asp-action="PromoteToAdms" method="post" class="flex-fill">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn w-100 btn-sm fw-bold"
                                    style="background-color: #e7f3ff; color: #1877f2; border: none; border-radius: 6px;"
                                    onclick="return confirm('Sigur doriți să acordați rolul de Administrator?');">
                                <i class="bi bi-shield-plus"></i> Upgrade
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="flex-fill text-center py-1 rounded-2" style="background-color: #f0f2f5;">
                            <span class="badge" style="color: #1877f2; font-size: 0.85rem;">
                                <i class="bi bi-patch-check-fill"></i> Admin
                            </span>
                        </div>
                    }

                    @* Buton Profil *@
                    <a asp-controller="Profile" asp-action="Details" asp-route-userId="@user.Id"
                       class="btn btn-sm flex-fill fw-bold" style="background-color: #f0f2f5; color: #050505; border-radius: 6px;">
                        <i class="bi bi-eye"></i> Profil
                    </a>

                    @* Buton Stergere *@
                    <form asp-controller="Administrators" asp-action="DeleteUser" method="post" class="flex-fill">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-sm w-100 fw-bold"
                                style="background-color: #fdecf1; color: #f02849; border: none; border-radius: 6px;"
                                onclick="return confirm('ATENȚIE! Ștergerea utilizatorului este ireversibilă.');">
                            <i class="bi bi-trash"></i> Șterge
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<style>
    body {
        background-color: #f0f2f5; /* Griul Facebook */
    }

    .btn:hover {
        filter: brightness(0.95);
    }

    .card {
        border: 1px solid #dddfe2 !important;
    }
</style>