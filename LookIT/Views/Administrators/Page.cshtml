@{
    ViewBag.Title = "Panou Administrare";
}

<div class="py-5">
    <div class="container">

        @* --- HEADER PANOU --- *@
        <div class="row mb-5">
            <div class="col-12 text-center">
                <div class="mb-3">
                    <i class="bi bi-shield-lock-fill lookit-title" style="font-size: 3.5rem;"></i>
                </div>
                <h2 class="fw-bold lookit-title">Panou de Control Administrator</h2>
                <p class="text-muted mx-auto" style="max-width: 600px;">
                    Gestionează comunitatea LookIT: monitorizează utilizatorii, moderează conținutul și asigură respectarea regulamentului platformei.
                </p>
            </div>
        </div>

        <div class="row g-4 justify-content-center">

            @* GESTIONARE UTILIZATORI *@
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden group-card-index">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width: 80px; height: 80px; background-color: #FDF2F7;">
                            <i class="bi bi-people-fill lookit-title" style="font-size: 2.2rem;"></i>
                        </div>
                        <h4 class="fw-bold lookit-title">Utilizatori</h4>
                        <p class="text-muted small">
                            Vezi lista completă a membrilor, editează profiluri sau suspendă conturile care nu respectă regulile.
                        </p>
                        <div class="mt-4">
                            <a href="/Administrators/Index" class="btn btn-primary w-100 py-2">
                                Vezi toți utilizatorii
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            @* MODERARE GRUPURI *@
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden group-card-index">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width: 80px; height: 80px; background-color: #FDF2F7;">
                            <i class="bi bi-grid-3x3-gap-fill lookit-title" style="font-size: 2.2rem;"></i>
                        </div>
                        <h4 class="fw-bold lookit-title">Grupuri</h4>
                        <p class="text-muted small">
                            Monitorizează comunitățile create, verifică descrierile și intervine în caz de raportări.
                        </p>
                        <div class="mt-4">
                           
                            <a href="/Groups/Index" class="btn btn-magenta-outline w-100 py-2">
                                Administrează grupuri
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            @* RAPORTARI & SPAM *@
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden group-card-index">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width: 80px; height: 80px; background-color: #FDF2F7;">
                            <i class="bi bi-exclamation-octagon-fill lookit-title" style="font-size: 2.2rem;"></i>
                        </div>
                        <h4 class="fw-bold lookit-title">Raportări</h4>
                        <p class="text-muted small">
                            Analizează mesajele raportate de utilizatori și ia măsuri împotriva conținutului neadecvat.
                        </p>
                        <div class="mt-4">
                            <a href="/Messages/Index" class="btn btn-magenta-outline w-100 py-2">
                                Vezi mesaje raportate
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>

    .group-card-index {
        transition: all 0.3s ease;
        border-bottom: 4px solid transparent !important;
    }

        .group-card-index:hover {
            transform: translateY(-10px);
            border-bottom: 4px solid #B13079 !important;
            border-left: none !important;
        }
</style>