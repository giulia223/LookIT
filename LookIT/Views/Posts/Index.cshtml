@inject UserManager<ApplicationUser> UserManager
@using Microsoft.AspNetCore.Identity
@using LookIT.Models

@if (ViewBag.Message != null)
{
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-6">  
                <div class="alert @ViewBag.Alert alert-dismissible fade show border-0 shadow-sm rounded-pill text-center py-2 px-4" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <span style="font-size: 0.95rem; font-weight: 500;">@ViewBag.Message</span>
                    <button type="button" class="btn-close small" data-bs-dismiss="alert" aria-label="Close" style="padding: 1rem;"></button>
                </div>
            </div>
        </div>
    </div>
}
@{
    var loggedUser = await UserManager.GetUserAsync(User);
}

<div class="mt-4">
    @if (ViewBag.Posts.Count > 0)
    {
        @foreach (var post in ViewBag.Posts)
        {
            <div class="card mb-4 mx-auto border-0 shadow-sm" style="max-width: 600px;">
                <div class="card-body p-3">

                    <div class="d-flex align-items-center mb-3">
                        <a asp-controller="Profile" asp-action="Details" asp-area="" asp-route-userId="@post.AuthorId" class="text-decoration-none">
                            <img src="@post.Author.ProfilePictureUrl"
                                 alt="Profile Picture"
                                 class="rounded-circle border"
                                 style="width: 40px; height: 40px; object-fit: cover;" />
                        </a>
                        <div class="d-flex flex-column ms-2">
                            <a asp-controller="Profile" asp-action="Details" asp-area="" asp-route-userId="@post.AuthorId" class="text-decoration-none">
                                <span class="fw-bold text-dark" style="font-size: 0.95rem; line-height: 1.2;">
                                    @post.Author.FullName
                                </span>
                            </a>
                            <small class="text-muted" style="font-size: 0.8rem;">
                                @post.Date.ToString(post.Date.Year == DateTime.Now.Year ? "d MMMM HH:mm" : "d MMMM yyyy HH:mm") <i class="bi bi-globe"></i>
                            </small>
                        </div>
                    </div>

                    <div>
                        @if (!string.IsNullOrEmpty(post.TextContent))
                        {
                            <div class="mb-2">
                                @Html.Raw(post.TextContent)
                            </div>
                        }

                        @if (post.ImageUrl != null)
                        {
                            <img src="@post.ImageUrl"
                                 alt="Post Image"
                                 class="rounded-2 w-100 border"
                                 style="height: auto; max-height: 600px; object-fit: contain;" />
                        }
                    </div>

                    @if (post.VideoUrl != null)
                    {
                        <div class="mt-2">
                            <video controls preload="metadata" class="w-100 rounded-2 border" style="max-height: 600px; background-color: #000;">
                                <source src="@post.VideoUrl" type="video/mp4">
                                Browserul tău nu suportă redarea acestui videoclip.
                            </video>
                        </div>
                    }

                    <div class="mt-3">
                        <a asp-controller="Posts" asp-action="Show" asp-route-id="@post.PostId"
                           class="btn btn-magenta-outline rounded-pill px-4 fw-bold">
                            Vezi postarea 
                        </a>
                    </div>

                </div>
            </div>
        }
        @if (ViewBag.LastPage > 1)
        {
            <div class="d-flex justify-content-center mt-5 mb-4 pb-5">
                @{
                    int currentPage = ViewBag.CurrentPage;
                    int lastPage = ViewBag.LastPage;
                    int prevPage = currentPage > 1 ? currentPage - 1 : 1;
                    int nextPage = currentPage < lastPage ? currentPage + 1 : lastPage;
                }

                <nav aria-label="Page navigation">
                    <ul class="pagination align-items-center gap-2">

                        @*buton previous*@
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                               href="@ViewBag.PaginationBaseUrl@prevPage"
                               aria-label="Previous"
                               style="width: 40px; height: 40px;">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>

                        @*butoanele numeerotate*@
                        @for (int i = 1; i <= lastPage; i++)
                        {
                            @* logica pentru a nu afisa TOATE paginile daca sunt multe (optional, dar util) *@
                            @* afisam prima, ultima, curenta si vecinii ei *@
                            if (i == 1 || i == lastPage || (i >= currentPage - 1 && i <= currentPage + 1))
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm fw-bold"
                                       href="@ViewBag.PaginationBaseUrl@i"
                                       style="width: 40px; height: 40px;">
                                        @i
                                    </a>
                                </li>
                            }
                            else if (i == currentPage - 2 || i == currentPage + 2)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link border-0 bg-transparent text-muted">...</span>
                                </li>
                            }
                        }

                        @*butonul de next*@
                        <li class="page-item @(currentPage == lastPage ? "disabled" : "")">
                            <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                               href="@ViewBag.PaginationBaseUrl@nextPage"
                               aria-label="Next"
                               style="width: 40px; height: 40px;">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        }
    }
    else
    {
        <div class="d-flex align-items-center justify-content-center" style="min-height: 60vh;">
            <div class="text-center">
                <div class="mb-3">
                    <i class="bi bi-postcard text-muted" style="font-size: 5rem; opacity: 0.5;"></i>
                </div>
                <h3 class="text-muted fw-bold">Momentan nu există postări</h3>
                <p class="text-secondary mx-auto" style="max-width: 400px;">
                    Fluxul tău este gol. Urmărește mai mulți utilizatori sau începe tu conversația!
                </p>

                @if (loggedUser is not null)
                {
                    <a asp-controller="Posts" asp-action="New" class="btn btn-primary rounded-pill px-4 mt-3 shadow-sm">
                        <i class="bi bi-plus-circle me-1"></i> Creează o postare
                    </a>
                }
            </div>
        </div>
    }
</div>

<style>

    :root {
        --lookit-magenta: #B13079;
        --lookit-pink-light: #FBF1F7;
    }
 
    .pagination .page-item .page-link {
        border: none;
        color: #555; 
        background-color: #fff;
        transition: all 0.2s ease-in-out;
    }


    .pagination .page-item:not(.active):not(.disabled) .page-link:hover {
        background-color: #FBF1F7; 
        color: #B13079;
        transform: translateY(-2px);
    }

    /* starea active pt pagina curenta*/
    .pagination .page-item.active .page-link {
        background-color: #D87CB0; 
        color: #fff;
        box-shadow: 0 4px 6px rgba(177, 48, 121, 0.3) !important;
        pointer-events: none;
    }

    /* starea dsiabled pt unde nu mai pot ajunge*/
    .pagination .page-item.disabled .page-link {
        background-color: #f0f2f5;
        color: #bcc0c4;
        opacity: 0.7;
        box-shadow: none !important;
    }

    .btn-magenta {
        background-color: var(--lookit-magenta);
        color: white;
        border: none;
        transition: opacity 0.2s;
    }

        .btn-magenta:hover {
            background-color: #922763;
            color: white;
        }

    .btn-magenta-outline {
        border: 2px solid var(--lookit-magenta);
        color: var(--lookit-magenta);
        background: transparent;
    }

        .btn-magenta-outline:hover {
            background-color: var(--lookit-magenta);
            color: white;
        }

 </style>
