@model LookIT.Models.Post
@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager

@{
    var loggedUser = await UserManager.GetUserAsync(User);
    var currentUserId = UserManager.GetUserId(User);
    bool isLiked = Model.Likes.Any(like => like.UserId == currentUserId);
    int likeCount = Model.Likes.Count;
    bool hasRights = (ViewBag.EsteUser == true && Model.AuthorId == ViewBag.UserCurent) || ViewBag.EsteAdministrator == true;
}

@if (TempData["message"] != null)
{
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="alert @ViewBag.Alert alert-dismissible fade show border-0 shadow-sm rounded-pill text-center py-2 px-4" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <span style="font-size: 0.95rem; font-weight: 500;">@ViewBag.Message</span>
                    <button type="button" class="btn-close small" data-bs-dismiss="alert" aria-label="Close" style="padding: 1rem;"></button>
                </div>
            </div>
        </div>
    </div>
}

<br />

@* --- 0. BUTON ÎNAPOI --- *@
<div class="container mb-3 mx-auto" style="max-width: 600px;">
    <a href="javascript:history.back()" class="btn btn-sm btn-light rounded-pill px-3 fw-bold text-muted border-0 shadow-sm">
        <i class="bi bi-arrow-left me-1"></i> Înapoi
    </a>
</div>

<div class="card mb-3 mx-auto border-0 shadow-sm" style="max-width: 600px;">
    <div class="card-body p-3">

        @* HEADER POSTARE *@
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="d-flex align-items-center">
                <a asp-controller="Profile" asp-action="Details" asp-route-userId="@Model.AuthorId" class="text-decoration-none">
                    <img src="@(!string.IsNullOrEmpty(Model.Author.ProfilePictureUrl) ? Model.Author.ProfilePictureUrl : "/images/default-profile.png")"
                         alt="Profile Picture"
                         class="rounded-circle border"
                         style="width: 40px; height: 40px; object-fit: cover;" />
                </a>
                <div class="d-flex flex-column ms-2">
                    <a asp-controller="Profile" asp-action="Details" asp-route-userId="@Model.AuthorId" class="text-decoration-none">
                        <span class="fw-bold text-dark" style="font-size: 0.95rem; line-height: 1.2;">
                            @Model.Author.FullName
                        </span>
                    </a>
                    <small class="text-muted" style="font-size: 0.8rem;">
                        @Model.Date.ToString("d MMMM HH:mm")
                        <i class="bi bi-globe"></i>
                    </small>
                </div>
            </div>

            @if (hasRights)
            {
                <div class="dropdown">
                    <button class="btn btn-link text-dark text-decoration-none p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots-vertical fs-5"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow custom-dropdown-menu p-2 rounded-3">
                        <li>
                            <a class="dropdown-item custom-dropdown-item d-flex align-items-center gap-2 rounded-2"
                               asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.PostId">
                                <i class="bi bi-pencil"></i>
                                <span class="text-dark">Editează postarea</span>
                            </a>
                        </li>
                        <li>
                            <form method="post" asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.PostId">
                                <button class="dropdown-item custom-dropdown-item delete-item d-flex align-items-center gap-2 rounded-2" type="submit">
                                    <i class="bi bi-trash"></i>
                                    <span class="text-dark">Șterge postarea</span>
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
        </div>

        @* CONTINUT *@
        @if (!string.IsNullOrEmpty(@Model.TextContent))
        {
            <div class="mb-2">@Html.Raw(Model.TextContent)</div>
        }

        @if (@Model.ImageUrl != null)
        {
            <img src="@Model.ImageUrl" alt="Post Image" class="rounded-2 w-100 border mb-2" style="height: auto; max-height: 600px; object-fit: contain;" />
        }

        @if (@Model.VideoUrl != null)
        {
            <div class="mt-2 mb-2">
                <video controls preload="metadata" class="w-100 rounded-2 border" style="max-height: 600px; background-color: #000;">
                    <source src="@Model.VideoUrl" type="video/mp4">
                </video>
            </div>
        }

        @* BARA DE ACTIUNI *@
        @if (ViewBag.EsteUser == true || ViewBag.EsteAdministrator == true)
        {
            <div class="d-flex justify-content-between align-items-center mt-3 px-1">
                <div class="d-flex align-items-center">
                    <button type="button" onclick="toggleLike(@Model.PostId)" class="btn p-0 border-0 d-flex align-items-center gap-1" style="background: none; outline: none;">
                        <i id="like-icon-@Model.PostId" class="bi @(isLiked ? "bi-heart-fill text-danger" : "bi-heart text-dark") fs-4"></i>
                    </button>
                    <span id="like-count-@Model.PostId" class="ms-1 fw-bold text-muted" style="font-size: 0.9rem;">@likeCount</span>
                </div>

                <div class="bookmark-container">
                    <div class="bookmark-trigger">
                        <i class="bi bi-bookmark fs-4 cursor-pointer text-dark"></i>
                    </div>
                    <div class="bookmark-dropdown shadow border rounded-3 p-2">
                        <h6 class="small fw-bold border-bottom pb-2 mb-2 text-muted">Salvează în:</h6>

                        @if (ViewBag.UserCollections != null)
                        {
                            var savedIds = ViewBag.SavedCollectionIds as List<int> ?? new List<int>();

                            @foreach (var collection in ViewBag.UserCollections)
                            {
                                var isInCollection = savedIds.Contains(collection.CollectionId);

                                <form method="post" asp-controller="Posts" asp-action="AddToCollection">
                                    <input type="hidden" name="PostId" value="@Model.PostId" />
                                    <input type="hidden" name="CollectionId" value="@collection.CollectionId" />

                                    @* --- MODIFICARE: Clase condiționale pentru fundal și text --- *@
                                    <button type="submit" class="dropdown-item custom-dropdown-item rounded-2 d-flex justify-content-between align-items-center @(isInCollection ? "active-collection" : "")">
                                        <span>
                                            @if (isInCollection)
                                            {
                                                @* Iconiță plină + Text Magenta *@
                                                <i class="bi bi-folder-fill me-2 text-magenta"></i>
                                                <span class="fw-bold text-magenta">@collection.Name</span>
                                            }
                                            else
                                            {
                                                @* Iconiță goală + Text normal *@
                                                <i class="bi bi-folder me-2 text-muted"></i>
                                                <span class="text-dark">@collection.Name</span>
                                            }
                                        </span>

                                        @if (isInCollection)
                                        {
                                            @* Bifă Magenta *@
                                            <i class="bi bi-check-lg text-magenta fw-bold"></i>
                                        }
                                    </button>
                                </form>
                            }
                        }
                        <div class="border-top pt-2 mt-2 text-center">
                            @* Link "Colecție nouă" - Magenta *@
                            <a asp-action="New" asp-controller="Collections" asp-area="" asp-route-postId="@Model.PostId" class="text-decoration-none small text-magenta fw-bold">
                                <i class="bi bi-plus-lg"></i> Colecție nouă
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@* ZONA COMENTARII *@
<div class="card mb-4 mx-auto border-0 shadow-sm" style="max-width: 600px;">
    <div class="card-body p-3">
        <h6 class="text-muted mb-3 ps-1">Comentarii</h6>

        @if (ViewBag.EsteUser || ViewBag.EsteAdministrator)
        {
            <div class="mb-4">
                <form method="post" asp-controller="Posts" asp-action="Show">
                    <input type="hidden" name="PostId" value="@Model.PostId" />

                    <div class="d-flex gap-2 align-items-start">
                        <img src="@(!string.IsNullOrEmpty(loggedUser?.ProfilePictureUrl) ? loggedUser.ProfilePictureUrl : "/images/default-profile.png")"
                             class="rounded-circle border"
                             style="width: 32px; height: 32px; object-fit: cover;"
                             alt="Me" />

                        <div class="flex-grow-1">
                            <div class="d-flex align-items-center bg-light rounded-pill px-3 py-2 border shadow-sm" style="background-color: #f0f2f5 !important;">

                                @* --- MODIFICARE AICI: Am adăugat clasa 'comment-input-gray' --- *@
                                @* <textarea class="form-control bg-transparent border-0 shadow-none p-0 me-2 comment-input-gray"
                                      name="Content" rows="1" placeholder="Scrie un comentariu..."
                                      style="resize: none; overflow-y: hidden; font-size: 0.9rem;"></textarea>

                                <button class="btn btn-link text-primary p-0 text-decoration-none" type="submit">
                                    <i class="bi bi-send-fill"></i>
                                </button> *@
                               
                                    @* Inputul pentru comentariu *@
                                    <textarea class="form-control bg-transparent border-0 shadow-none p-0 me-2 comment-input-gray flex-grow-1"
                                          name="Content"
                                          rows="1"
                                          placeholder="Scrie un comentariu..."
                                          style="resize: none; overflow-y: hidden; font-size: 0.9rem; color: #4b4f56;"></textarea>

                                    @* Butonul de trimitere schimbat pe Magenta *@
                                    <button class="btn btn-link p-0 text-decoration-none d-flex align-items-center"
                                            type="submit"
                                            style="color: #B13079; transition: transform 0.2s ease;">
                                        <i class="bi bi-send-fill fs-5"></i>
                                    </button>
                                
                            </div>
                            <div class="text-danger small mt-1 ms-3">
                                @Html.ValidationMessage("Content")
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        }

        @if (Model.Comments.Count > 0)
        {
            <div class="comments-list">
                @foreach (var comment in Model.Comments)
                {
                    <partial name ="_commentInfo" model="comment" />
                }
            </div>
        }
        else
        {
            <div class="text-center text-muted small my-3">Inca nu există comentarii.</div>
        }
    </div>
</div>

<style>
    /* --- CULORI LOOKIT --- */
    .text-magenta {
        color: #B13079 !important;
    }

    /* Fundal roz pal pentru elementele active din listă */
    .active-collection {
        background-color: #FBF1F7 !important;
    }

    /* --- STILURI DROPDOWN --- */
    .custom-dropdown-item {
        background: none;
        border: none;
        width: 100%;
        text-align: left;
        padding: 10px 16px;
        color: #212529;
        display: flex;
        align-items: center;
        text-decoration: none;
        transition: background-color 0.2s, color 0.2s;
    }

        /* Hover standard (gri deschis) */
        .custom-dropdown-item:hover {
            background-color: #f8f9fa;
        }

        /* Hover pe element deja activ (păstrăm rozul dar puțin mai închis sau la fel) */
        .custom-dropdown-item.active-collection:hover {
            background-color: #F3E5F5; /* O idee mai închis la hover */
        }

    .bookmark-dropdown form {
        margin-bottom: 5px;
    }

        .bookmark-dropdown form:last-of-type {
            margin-bottom: 0;
        }

    .bookmark-container {
        position: relative;
        display: inline-block;
        padding-top: 10px;
        margin-top: -10px;
    }

    .bookmark-dropdown {
        display: none;
        position: absolute;
        right: 0;
        top: 100%;
        bottom: auto;
        background-color: white;
        min-width: 220px;
        z-index: 1050;
        margin-top: 2px;
    }

        .bookmark-dropdown::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 15px;
            top: -15px;
            bottom: auto;
            left: 0;
            background: transparent;
        }

    .bookmark-container:hover .bookmark-dropdown {
        display: block;
    }

    /* --- PLACEHOLDER --- */
    .comment-input-gray::placeholder {
        color: #6c757d !important;
        opacity: 1;
    }

    /* Efect de mărire la hover pentru butonul de trimitere */
    button[type="submit"]:hover {
        transform: scale(1.1);
        color: #922763 !important;
    }

    /* Stil pentru placeholder-ul gri */
    .comment-input-gray::placeholder {
        color: #8e8e8e !important;
        font-style: italic;
        opacity: 0.8;
    }

    /* Eliminăm orice outline albastru la focus */
    .comment-input-gray:focus {
        background-color: transparent !important;
        box-shadow: none !important;
    }
</style>

<script>
    function toggleLike(postId) {
        let formData = new FormData();
        formData.append("Id", postId);
        fetch('/Posts/LikePost', { method: 'POST', body: formData })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                let icon = document.getElementById("like-icon-" + postId);
                let countSpan = document.getElementById("like-count-" + postId);
                if (data.isLiked) {
                    icon.classList.remove("bi-heart", "text-dark");
                    icon.classList.add("bi-heart-fill", "text-danger");
                } else {
                    icon.classList.remove("bi-heart-fill", "text-danger");
                    icon.classList.add("bi-heart", "text-dark");
                }
                countSpan.innerText = data.count;
            }
        })
        .catch(error => console.error('Eroare:', error));
    }
</script>