@model LookIT.Models.Post
@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager

@{
    var loggedUser = await UserManager.GetUserAsync(User);
}

@if (TempData["message"] != null)
{
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="alert @ViewBag.Alert alert-dismissible fade show border-0 shadow-sm rounded-pill text-center py-2 px-4" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <span style="font-size: 0.95rem; font-weight: 500;">@ViewBag.Message</span>
                    <button type="button" class="btn-close small" data-bs-dismiss="alert" aria-label="Close" style="padding: 1rem;"></button>
                </div>
            </div>
        </div>
    </div>
}

<br />

<div class="card mb-3 mx-auto border-0 shadow-sm" style="max-width: 600px;">
    <div class="card-body p-3">

        <div class="d-flex align-items-center mb-3">
            <a asp-controller="Profile" asp-action="Details" asp-route-userId="@Model.AuthorId" asp-area="" class="text-decoration-none">
                <img src="@Model.Author.ProfilePictureUrl"
                     alt="Profile Picture"
                     class="rounded-circle border"
                     style="width: 40px; height: 40px; object-fit: cover;" />
            </a>

            <div class="d-flex flex-column ms-2">
                <a asp-controller="Profile" asp-action="Details" asp-route-userId="@Model.AuthorId" asp-area="" class="text-decoration-none">
                    <span class="fw-bold text-dark" style="font-size: 0.95rem; line-height: 1.2;">
                        @Model.Author.FullName
                    </span>
                </a>
                <small class="text-muted" style="font-size: 0.8rem;">
                    @Model.Date.ToString("d MMMM HH:mm") 
                    <i class="bi bi-globe"></i>
                </small>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(@Model.TextContent))
        {
            <div class="mb-2">@Html.Raw(Model.TextContent)</div>
        }

        @if (@Model.ImageUrl != null)
        {
            <img src="@Model.ImageUrl" alt="Post Image" class="rounded-2 w-100 border mb-2" style="height: auto; max-height: 600px; object-fit: contain;" />
        }

        @if (@Model.VideoUrl != null)
        {
            <div class="mt-2 mb-2">
                <video controls preload="metadata" class="w-100 rounded-2 border" style="max-height: 600px; background-color: #000;">
                    <source src="@Model.VideoUrl" type="video/mp4">
                </video>
            </div>
        }

        @if ((ViewBag.EsteUser == true && Model.AuthorId == ViewBag.UserCurent) || ViewBag.EsteAdministrator == true)
        {
            <div class="d-flex justify-content-between align-items-center mt-3 px-1">
                <div class="d-flex gap-2">
                    @if ((ViewBag.EsteUser == true && Model.AuthorId == ViewBag.UserCurent) || ViewBag.EsteAdministrator == true)
                    {
                        <a class="btn btn-sm btn-outline-secondary border-0" asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.PostId">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <form method="post" asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.PostId" class="d-inline">
                            <button class="btn btn-sm btn-outline-danger border-0" type="submit">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    }
                </div>

                <div class="bookmark-container">
                    
                    <div class="bookmark-trigger">
                        @if (ViewBag.IsSaved)
                        {
                            <i class="bi bi-bookmark-fill fs-4 text-primary cursor-pointer"></i>
                        }
                        else
                        {
                            <i class="bi bi-bookmark fs-4 cursor-pointer"></i>
                        }
                    </div>

                    <div class="bookmark-dropdown shadow border rounded-3 p-2">
                        <h6 class="small fw-bold border-bottom pb-2 mb-2">Salvează în:</h6>
                        @if (ViewBag.UserCollections != null)
                        {
                            @foreach (var collection in ViewBag.UserCollections)
                            {
                                <form method="post" asp-controller="Posts" asp-action="AddToCollection">
                                    <input type="hidden" name="PostId" value="@Model.PostId" />
                                    <input type="hidden" name="CollectionId" value="@collection.CollectionId" />
                                    <button type="submit" class="dropdown-item small rounded-2">
                                        <i class="bi bi-folder me-1"></i> @collection.Name
                                    </button>
                                </form>
                            }
                        }
                        <div class="border-top pt-2 mt-2 text-center">
                            <a href="/Collections/New" class="text-decoration-none small text-primary fw-bold">
                                <i class="bi bi-plus-lg"></i> Colecție nouă
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="card mb-4 mx-auto border-0 shadow-sm" style="max-width: 600px;">
    <div class="card-body p-3">

        <h6 class="text-muted mb-3 ps-1">Comentarii</h6>

        @if (ViewBag.EsteUser || ViewBag.EsteAdministrator)
        {
            <div class="mb-4">
                <form method="post" asp-controller="Posts" asp-action="Show">
                    <input type="hidden" name="PostId" value="@Model.PostId" />

                    <div class="d-flex gap-2 align-items-start">
                        <img src="@loggedUser?.ProfilePictureUrl"
                             class="rounded-circle border"
                             style="width: 32px; height: 32px; object-fit: cover;"
                             alt="Me" />

                        <div class="flex-grow-1">
                            <div class="d-flex align-items-center bg-light rounded-4 px-3 py-2 border">
                                <textarea class="form-control bg-transparent border-0 shadow-none p-0 me-2"
                                      name="Content"
                                      rows="1"
                                      placeholder="Scrie un comentariu..."
                                      style="resize: none; overflow-y: hidden; font-size: 0.9rem;"></textarea>

                                <button class="btn btn-link text-primary p-0 text-decoration-none" type="submit">
                                    <i class="bi bi-send-fill"></i>
                                </button>
                            </div>
                            <div class="text-danger small mt-1 ms-2">
                                @Html.ValidationMessage("Content")
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        }

        @if(Model.Comments.Count > 0)
        {
            <div class="comments-list">
                @foreach (var comment in Model.Comments)
                {
                    <div class="d-flex gap-2 mb-3">
                        <div class="flex-shrink-0">
                            <a asp-controller="Profile" asp-action="Details" asp-route-userId="@comment.UserId" asp-area="" class="text-decoration-none">
                                <img src="@comment.User.ProfilePictureUrl"
                                     alt="Profile"
                                     class="rounded-circle border"
                                     style="width: 32px; height: 32px; object-fit: cover;" />
                            </a>
                        </div>

                        <div class="flex-grow-1">
                            <div class="bg-light rounded-4 px-3 py-2 d-inline-block border" style="min-width: 220px; max-width: 100%;">
                                <div class="d-flex align-items-center justify-content-between mb-1">
                                    <a asp-controller="Profile" asp-action="Details" asp-route-userId="@comment.UserId" asp-area="" class="text-decoration-none">
                                        <span class="fw-bold text-dark" style="font-size: 0.85rem;">
                                            @(comment.User.FullName ?? "Utilizator necunoscut")
                                        </span>
                                    </a>

                                    @* Indicator discret pentru editare *@
                                    @if (comment.DateModified.HasValue)
                                    {
                                        <small class="text-muted ms-4" style="font-size: 0.7rem;"
                                               title="Data exactă: @comment.DateModified.Value.ToString("g")">
                                            Editat la @(comment.DateModified.Value.Year == DateTime.Now.Year
                                                                            ? comment.DateModified.Value.ToString("d MMM HH:mm")
                                                                            : comment.DateModified.Value.ToString("d MMM yyyy HH:mm"))
                                        </small>
                                     }
                                </div>

                                <div class="text-break" style="font-size: 0.9rem;">
                                    @comment.Content
                                </div>
                            </div>

                            @* Bara de acțiuni de sub comentariu *@
                            <div class="d-flex align-items-center gap-3 ms-2 mt-1">
                                <small class="text-muted" style="font-size: 0.75rem;">
                                    @comment.Date.ToString(comment.Date.Year == DateTime.Now.Year ? "d MMM HH:mm" : "d MMM yyyy HH:mm")
                                </small>

                                @if (comment.UserId == ViewBag.UserCurent || ViewBag.EsteAdministrator == true)
                                {
                                    <a class="text-decoration-none text-secondary fw-bold" style="font-size: 0.75rem;"
                                       asp-controller="Comments" asp-action="Edit" asp-route-id="@comment.CommentId">
                                        Editează
                                    </a>

                                    <form method="post" asp-controller="Comments" asp-action="Delete" asp-route-id="@comment.CommentId" class="d-inline">
                                        <button class="btn btn-link text-danger text-decoration-none fw-bold p-0 border-0"
                                                style="font-size: 0.75rem; line-height: 1;" type="submit">
                                            Șterge
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                        
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center text-muted small my-3">
                Inca nu există comentarii.
            </div>
        }
        
    </div>
</div>

<style>
    .bookmark-dropdown .dropdown-item {
        background: none;
        border: none;
        width: 100%;
        text-align: left;
        /* Mărim padding-ul vertical de la 8px la 12px sau mai mult pentru spațiu */
        padding: 10px 16px;
        color: #212529;
        display: flex;
        align-items: center;
        text-decoration: none;
        transition: background-color 0.2s;
    }

        .bookmark-dropdown .dropdown-item:hover {
            background-color: #f8f9fa;
            color: #0d6efd;
        }

    /* Adăugăm spațiu între formularele care conțin butoanele */
    .bookmark-dropdown form {
        margin-bottom: 5px;
    }

        .bookmark-dropdown form:last-of-type {
            margin-bottom: 0;
        }
    .bookmark-container {
        position: relative;
        display: inline-block;
        padding-bottom: 10px; /* Creează o zonă invizibilă de legătură sub iconiță */
        margin-bottom: -10px;
    }

    .bookmark-dropdown {
        display: none;
        position: absolute;
        right: 0;
        bottom: 100%; /* Se deschide deasupra */
        background-color: white;
        min-width: 200px;
        z-index: 1050;
        margin-bottom: 2px; /* Micșorează distanța față de iconiță */
        /* Adăugăm un "pseudo-element" pentru a umple spațiul gol */
    }

        .bookmark-dropdown::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 15px; /* Pod invizibil între meniu și iconiță */
            bottom: -15px;
            left: 0;
            background: transparent;
        }

    .bookmark-container:hover .bookmark-dropdown {
        display: block;
    }
</style>
