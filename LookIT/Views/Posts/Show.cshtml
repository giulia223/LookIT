@model LookIT.Models.Post
@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager

@{
    var loggedUser = await UserManager.GetUserAsync(User);
}

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<br />

<div class="card mb-3 mx-auto border-0 shadow-sm" style="max-width: 600px;">
    <div class="card-body p-3">

        <div class="d-flex align-items-center mb-3">
            <img src="@Model.Author.ProfilePictureUrl"
                 alt="Profile Picture"
                 class="rounded-circle border"
                 style="width: 40px; height: 40px; object-fit: cover;" />

            <div class="d-flex flex-column ms-2">
                <span class="fw-bold text-dark" style="font-size: 0.95rem; line-height: 1.2;">
                    @Model.Author.FullName
                </span>
                <small class="text-muted" style="font-size: 0.8rem;">
                    @Model.Date.ToString("d MMMM HH:mm") 
                    <i class="bi bi-globe"></i>
                </small>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(@Model.TextContent))
        {
            <div class="mb-2">@Model.TextContent</div>
        }

        @if (@Model.ImageUrl != null)
        {
            <img src="@Model.ImageUrl" alt="Post Image" class="rounded-2 w-100 border mb-2" style="height: auto; max-height: 600px; object-fit: contain;" />
        }

        @if (@Model.VideoUrl != null)
        {
            <div class="mt-2 mb-2">
                <video controls preload="metadata" class="w-100 rounded-2 border" style="max-height: 600px; background-color: #000;">
                    <source src="@Model.VideoUrl" type="video/mp4">
                </video>
            </div>
        }

        @if ((ViewBag.EsteUser == true && Model.AuthorId == ViewBag.UserCurent) || ViewBag.EsteAdministrator == true)
        {
            <div class="d-flex flex-row justify-content-between gap-2">
                <a class="btn btn-sm btn-outline-success border-0" asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.PostId">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <form method="post" asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.PostId">
                    <button class="btn btn-sm btn-outline-danger border-0" type="submit">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        }
    </div>
</div>

<div class="card mb-4 mx-auto border-0 shadow-sm" style="max-width: 600px;">
    <div class="card-body p-3">

        <h6 class="text-muted mb-3 ps-1">Comentarii</h6>

        @if (ViewBag.EsteUser || ViewBag.EsteAdministrator)
        {
            <div class="mb-4">
                <form method="post" asp-controller="Posts" asp-action="Show">
                    <input type="hidden" name="PostId" value="@Model.PostId" />

                    <div class="d-flex gap-2 align-items-start">
                        <img src="@loggedUser?.ProfilePictureUrl"
                             class="rounded-circle border"
                             style="width: 32px; height: 32px; object-fit: cover;"
                             alt="Me" />

                        <div class="flex-grow-1">
                            <div class="d-flex align-items-center bg-light rounded-4 px-3 py-2 border">
                                <textarea class="form-control bg-transparent border-0 shadow-none p-0 me-2"
                                      name="Content"
                                      rows="1"
                                      placeholder="Scrie un comentariu..."
                                      style="resize: none; overflow-y: hidden; font-size: 0.9rem;"></textarea>

                                <button class="btn btn-link text-primary p-0 text-decoration-none" type="submit">
                                    <i class="bi bi-send-fill"></i>
                                </button>
                            </div>
                            <div class="text-danger small mt-1 ms-2">
                                @Html.ValidationMessage("Content")
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        }

        @if(Model.Comments.Count > 0)
        {
            <div class="comments-list">
                @foreach (var comment in Model.Comments)
                {
                    <div class="d-flex gap-2 mb-3">
                        <div class="flex-shrink-0">
                            <img src="@comment.User.ProfilePictureUrl"
                                 alt="Profile"
                                 class="rounded-circle border"
                                 style="width: 32px; height: 32px; object-fit: cover;" />
                        </div>

                        <div class="flex-grow-1">
                            <div class="bg-light rounded-4 px-3 py-2 d-inline-block border" style="min-width: 220px;">
                                <div class="fw-bold text-dark" style="font-size: 0.85rem;">
                                    @(comment.User.FullName ?? "Utilizator necunoscut")
                                </div>
                                <div class="text-break" style="font-size: 0.9rem;">
                                    @comment.Content
                                </div>
                            </div>

                            <div class="d-flex align-items-center gap-3 ms-2 mt-1">
                                <small class="text-muted" style="font-size: 0.75rem;">
                                    @comment.Date.ToString(comment.Date.Year == DateTime.Now.Year ? "d MMM HH:mm" : "d MMM yyyy HH:mm")
                                </small>

                                @if (comment.UserId == ViewBag.UserCurent || ViewBag.EsteAdministrator == true)
                                {
                                    <a class="text-decoration-none text-secondary fw-bold" style="font-size: 0.75rem; cursor: pointer;"
                                       asp-controller="Comments" asp-action="Edit" asp-route-id="@comment.CommentId">
                                        Editează
                                    </a>

                                    <form method="post" asp-controller="Comments" asp-action="Delete" asp-route-id="@comment.CommentId" class="d-inline">
                                        <button class="btn btn-link text-danger text-decoration-none fw-bold border-0" style="font-size: 0.75rem;" type="submit">
                                            Șterge
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center text-muted small my-3">
                Inca nu există comentarii.
            </div>
        }
        
    </div>
</div>

