@model LookIT.Models.ApplicationUser

@{
    ViewData["Title"] = "Profil - " + Model.FullName;
    bool showFullProfile = ViewBag.ShowFullProfile;
}

<div class="container mt-4">

    <div class="card mb-4 text-center border-0 shadow-sm">
        <div class="card-body">
            <img src="@Model.ProfilePictureUrl"
                 alt="Profile Picture"
                 class="rounded-circle mb-3"
                 style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #eee;" />

            <h3>@Model.FullName</h3>
            <div class="d-flex justify-content-center gap-5 my-3 text-center">

                <div>
                    <span class="fw-bold d-block fs-5">@ViewBag.UserPosts.Count</span>
                    <small class="text-muted">Postări</small>
                </div>

                @if (showFullProfile)
                {
                    <a asp-action="Followers" asp-route-userId="@Model.Id" class="text-decoration-none text-dark">
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowersCount</span>
                        <small class="text-muted">Urmăritori</small>
                    </a>
                }
                else
                {
                    <div>
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowersCount</span>
                        <small class="text-muted">Urmăritori</small>
                    </div>
                }

                @if (showFullProfile)
                {
                    <a asp-action="Following" asp-route-userId="@Model.Id" class="text-decoration-none text-dark">
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowingCount</span>
                        <small class="text-muted">Urmăriri</small>
                    </a>
                }
                else
                {
                    <div>
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowingCount</span>
                        <small class="text-muted">Urmăriri</small>
                    </div>
                }
            </div>

            <p class="text-muted">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    @Model.Description
                }
                else
                {
                    <em>Fără descriere.</em>
                }
            </p>

            @if (!Model.Public)
            {
                <span class="badge bg-secondary"><i class="bi bi-lock-fill"></i> Cont Privat</span>
            }

            @* --- ZONA DE ACTIUNI (BUTOANE) --- *@
            <div class="mt-4 d-flex flex-wrap justify-content-center gap-2">
                @if (ViewBag.IsOwner)
                {
                    @* 1. Buton: EDITEAZA PROFIL (Nume, Descriere, Poza) *@
                    <a asp-action="Edit" class="btn btn-light border fw-bold px-4 rounded-3 shadow-sm action-btn">
                        <i class="bi bi-pencil-square me-1"></i> Editează
                    </a>

                    @* 3. Buton: CERERI *@
                    <a asp-controller="FollowRequests" asp-action="MyRequests"
                       class="btn btn-light border fw-bold px-3 rounded-3 shadow-sm action-btn position-relative text-dark"
                       data-bs-toggle="tooltip" title="Cereri">
                        <i class="bi bi-person-check-fill"></i>
                        @if (ViewBag.HasPendingRequests == true)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
                        }
                    </a>

                    @* 4. Buton: COLECTII *@
                    <a asp-action="Index" asp-controller="Collections" asp-area=""
                       class="btn btn-light border rounded-3 shadow-sm action-btn px-3"
                       data-bs-toggle="tooltip" title="Salvate">
                        <i class="bi bi-bookmark-fill text-secondary"></i>
                    </a>

                    @* 5. Buton: APRECIATE *@
                    <a asp-action="Index" asp-controller="Likes" asp-area=""
                       class="btn btn-light border rounded-3 shadow-sm action-btn px-3"
                       data-bs-toggle="tooltip" title="Apreciate">
                        <i class="bi bi-heart-fill text-danger opacity-75"></i>
                    </a>
                }
                else if(User.Identity.IsAuthenticated)
                {
                    @* --- ZONA PENTRU VIZITATORI (Follow/Unfollow) --- *@
                    <form asp-action="FollowToggle" asp-route-userId="@Model.Id" method="post">
                        @if (ViewBag.IsFollowing)
                        {
                            <button type="submit" class="btn btn-light border fw-bold px-4 rounded-3 shadow-sm action-btn text-dark">
                                Urmărești <i class="bi bi-check2"></i>
                            </button>
                        }
                        else if (ViewBag.IsPending)
                        {
                            <button type="submit" class="btn btn-secondary fw-bold px-4 rounded-3 disabled border-0">
                                Cerere trimisă
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary fw-bold px-5 rounded-3 shadow-sm action-btn">
                                Urmărește
                            </button>
                        }
                    </form>
                }
            </div>
        </div>
    </div>

    <hr />


@if (showFullProfile)
{
    <div class="row g-3">
        @{
            var posts = ViewBag.UserPosts as List<LookIT.Models.Post>;
        }

        @if (posts != null && posts.Any())
        {
            @foreach (var post in posts)
            {
                <div class="col-4">
                    <a asp-controller="Posts" asp-action="Show" asp-route-id="@post.PostId" class="text-decoration-none">
                        <div class="ratio ratio-1x1 border rounded overflow-hidden position-relative shadow-sm bg-light">
                            @if (!string.IsNullOrEmpty(post.ImageUrl))
                            {
                                <img src="@post.ImageUrl" class="w-100 h-100" style="object-fit: cover;" alt="Post Image">
                                <div class="position-absolute top-0 end-0 p-1 text-white shadow-sm">
                                    <i class="bi bi-image"></i>
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(post.VideoUrl))
                            {
                                <video class="w-100 h-100" style="object-fit: cover;" muted>
                                    <source src="@post.VideoUrl" type="video/mp4">
                                </video>
                                <div class="position-absolute top-50 start-50 translate-middle text-white fs-2">
                                    <i class="bi bi-play-circle-fill"></i>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100 bg-light text-dark p-3 text-center">
                                    <small class="fw-medium">
                                        @* Folosim Html.Raw pentru continutul Summernote, dar limitam afisarea *@
                                        @Html.Raw(post.TextContent?.Length > 40 ? post.TextContent.Substring(0, 40) + "..." : post.TextContent)
                                    </small>
                                </div>
                                <div class="position-absolute top-0 end-0 p-1 text-muted">
                                    <i class="bi bi-card-text"></i>
                                </div>
                            }
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            @* Centrare verticala si orizontala pentru cazul fara postari *@
            <div class="col-12 py-5 text-center my-4">
                <div class="mb-3">
                    <i class="bi bi-camera text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
                </div>
                <h4 class="fw-bold text-dark">Încă nu există postări</h4>
                @if (ViewBag.IsOwner)
                {
                    <p class="text-muted">Împărtășește momentele tale cu ceilalți!</p>
                    <a asp-controller="Posts" asp-action="New" class="btn btn-primary rounded-pill px-4 mt-2 shadow-sm fw-bold">
                        <i class="bi bi-plus-circle me-1"></i> Creează prima postare
                    </a>
                }
                else
                {
                    <p class="text-muted">Când @Model.FullName va posta, conținutul va apărea aici.</p>
                }
            </div>
        }
    </div>
}
else
{
    <div class="row">
        <div class="col-12 py-5 text-center border-0 rounded-4 bg-light mt-2 shadow-sm">
            <div class="mb-3">
                <i class="bi bi-lock-fill text-muted" style="font-size: 3.5rem; opacity: 0.5;"></i>
            </div>
            <h4 class="fw-bold text-dark">Acest cont este privat</h4>
            <p class="text-muted mx-auto" style="max-width: 350px;">
                Urmareste acest utilizator pentru a vedea fotografiile și clipurile postate.
            </p>
        </div>
    </div>
}

    <style>
        /* Stiluri specifice pentru butoanele de profil */
        .action-btn {
            transition: all 0.2s ease-in-out;
            background-color: #f8f9fa; /* Gri foarte deschis */
            border-color: #dbdbdb !important;
            color: #262626;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-height: 38px;
        }

            .action-btn:hover {
                transform: translateY(-2px); /* Se ridica putin */
                background-color: #e2e5e9; /* Se inchide putin la culoare */
                box-shadow: 0 4px 6px rgba(0,0,0,0.05) !important;
                color: #000;
            }

            .action-btn:active {
                transform: translateY(0);
                background-color: #d3d6da;
            }

            /* Ajustare pentru iconite sa fie centrate frumos */
            .action-btn i {
                font-size: 1.1rem;
                vertical-align: middle;
            }

        /* Tooltip styling (opțional, bootstrap are nevoie de activare JS pt tooltips) */
        .btn-primary.action-btn {
            background-color: #0d6efd;
            color: white;
            border-color: #0d6efd !important;
        }

            .btn-primary.action-btn:hover {
                background-color: #0b5ed7;
                color: white;
            }
    </style>
