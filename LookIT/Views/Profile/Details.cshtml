@model LookIT.Models.ApplicationUser

@{
    ViewData["Title"] = "Profil - " + Model.FullName;
    bool showFullProfile = ViewBag.ShowFullProfile;
}

<div class="container mt-4">

    <div class="card mb-4 text-center border-0 shadow-sm">
        <div class="card-body">
            <img src="@Model.ProfilePictureUrl"
                 alt="Profile Picture"
                 class="rounded-circle mb-3"
                 style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #eee;" />

            <h3>@Model.FullName</h3>
            <div class="d-flex justify-content-center gap-5 my-3 text-center">

                <div>
                    <span class="fw-bold d-block fs-5">@ViewBag.UserPosts.Count</span>
                    <small class="text-muted">Postări</small>
                </div>

                @if (showFullProfile)
                {
                    <a asp-action="Followers" asp-route-userId="@Model.Id" class="text-decoration-none text-dark">
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowersCount</span>
                        <small class="text-muted">Urmăritori</small>
                    </a>
                }
                else
                {
                    <div>
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowersCount</span>
                        <small class="text-muted">Urmăritori</small>
                    </div>
                }

                @if (showFullProfile)
                {
                    <a asp-action="Following" asp-route-userId="@Model.Id" class="text-decoration-none text-dark">
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowingCount</span>
                        <small class="text-muted">Urmăriri</small>
                    </a>
                }
                else
                {
                    <div>
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowingCount</span>
                        <small class="text-muted">Urmăriri</small>
                    </div>
                }
            </div>

            <p class="text-muted">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    @Model.Description
                }
                else
                {
                    <em>Fără descriere.</em>
                }
            </p>

            @if (!Model.Public)
            {
                <span class="badge bg-secondary"><i class="bi bi-lock-fill"></i> Cont Privat</span>
            }

            @* --- ZONA DE ACTIUNI (BUTOANE) --- *@
            <div class="mt-4 d-flex flex-wrap justify-content-center gap-2">
                @if (ViewBag.IsOwner)
                {
                    @* 1. Buton: EDITEAZA PROFIL (Nume, Descriere, Poza) *@
                    <a asp-action="Edit" class="btn btn-light border fw-bold px-4 rounded-3 shadow-sm action-btn">
                        <i class="bi bi-pencil-square me-1"></i> Editează
                    </a>

                    @* 3. Buton: CERERI *@
                    <a asp-controller="FollowRequests" asp-action="MyRequests"
                       class="btn btn-light border fw-bold px-3 rounded-3 shadow-sm action-btn position-relative text-dark"
                       data-bs-toggle="tooltip" title="Cereri">
                        <i class="bi bi-person-check-fill"></i>
                        @if (ViewBag.HasPendingRequests == true)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
                        }
                    </a>

                    @* 4. Buton: COLECTII *@
                    <a asp-action="Index" asp-controller="Collections" asp-area=""
                       class="btn btn-light border rounded-3 shadow-sm action-btn px-3"
                       data-bs-toggle="tooltip" title="Salvate">
                        <i class="bi bi-bookmark-fill text-secondary"></i>
                    </a>

                    @* 5. Buton: APRECIATE *@
                    <a asp-action="Index" asp-controller="Likes" asp-area=""
                       class="btn btn-light border rounded-3 shadow-sm action-btn px-3"
                       data-bs-toggle="tooltip" title="Apreciate">
                        <i class="bi bi-heart-fill text-danger opacity-75"></i>
                    </a>
                }
                else if(User.Identity.IsAuthenticated)
                {
                    @* --- ZONA PENTRU VIZITATORI (Follow/Unfollow) --- *@
                    <form asp-action="FollowToggle" asp-route-userId="@Model.Id" method="post">
                        @if (ViewBag.IsFollowing)
                        {
                            <button type="submit" class="btn btn-light border fw-bold px-4 rounded-3 shadow-sm action-btn text-dark">
                                Urmărești <i class="bi bi-check2"></i>
                            </button>
                        }
                        else if (ViewBag.IsPending)
                        {
                            <button type="submit" class="btn btn-secondary fw-bold px-4 rounded-3 disabled border-0">
                                Cerere trimisă
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary fw-bold px-5 rounded-3 shadow-sm action-btn">
                                Urmărește
                            </button>
                        }
                    </form>
                }
            </div>
        </div>
    </div>

    <hr />


@if (showFullProfile)
{
        <div class="row g-1 mb-5">
            @{
                var posts = ViewBag.UserPosts as List<LookIT.Models.Post>;
            }

            @if (posts != null && posts.Any())
            {
                @foreach (var post in posts)
                {
                    <div class="col-4">
                        <a asp-controller="Posts" asp-action="Show" asp-route-id="@post.PostId" class="text-decoration-none user-select-none">

                            @* MODIFICARE AICI: Am schimbat 'rounded' cu 'rounded-0' *@
                            @* Am pastrat 'border' pentru un contur fin, dar il poti sterge daca vrei *@
                            <div class="ratio ratio-1x1 border rounded-0 overflow-hidden position-relative shadow-sm bg-light post-card-hover">

                                @* ========================================================== *@
                                @* 1. ZONA ICONITE (Colt Dreapta Sus)                         *@
                                @* ========================================================== *@
                                <div class="position-absolute top-0 end-0 m-2" style="z-index: 10;">
                                    @if (!string.IsNullOrEmpty(post.VideoUrl))
                                    {
                                        <i class="bi bi-camera-reels-fill text-white fs-5 drop-shadow-icon"></i>
                                    }
                                    else if (!string.IsNullOrEmpty(post.ImageUrl))
                                    {
                                        <i class="bi bi-image-fill text-white fs-5 drop-shadow-icon"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-file-text-fill text-white fs-5 drop-shadow-icon"></i>
                                    }
                                </div>

                                @* ========================================================== *@
                                @* 2. CONTINUTUL CARDULUI                                     *@
                                @* ========================================================== *@

                                @if (!string.IsNullOrEmpty(post.ImageUrl))
                                {
                                    <img src="@post.ImageUrl" class="w-100 h-100" style="object-fit: cover;" alt="Post Image">
                                }
                                else if (!string.IsNullOrEmpty(post.VideoUrl))
                                {
                                    <video class="w-100 h-100" style="object-fit: cover;" muted>
                                        <source src="@post.VideoUrl" type="video/mp4">
                                    </video>
                                }
                                else
                                {
                                    @* TEXT *@
                                    var rawHtml = post.TextContent ?? "";
                                    var plainText = System.Text.RegularExpressions.Regex.Replace(rawHtml, "<.*?>", " ").Trim();
                                    var previewText = plainText.Length > 70 ? plainText.Substring(0, 70) + "..." : plainText;

                                    <div class="d-flex flex-column align-items-center justify-content-center h-100 p-3 text-center bg-white">
                                        <i class="bi bi-quote fs-1 text-muted opacity-25 mb-1"></i>
                                        <small class="fw-bold text-dark text-break fst-italic pe-2 ps-2" style="font-family: 'Georgia', serif; line-height: 1.3;">
                                            @previewText
                                        </small>
                                    </div>
                                }

                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                @* Zona "Fara Postari" *@
                <div class="col-12 py-5 text-center mt-4">
                    <div class="mb-3">
                        <i class="bi bi-grid-3x3 text-muted" style="font-size: 3rem; opacity: 0.2;"></i>
                    </div>
                    <h5 class="fw-bold text-dark">Încă nu există postări</h5>
                </div>
            }
        </div>

    @* Adaugam un pic de CSS inline pentru hover effect *@
        <style>
            .post-card-hover {
                transition: transform 0.2s;
            }

                .post-card-hover:hover {
                    transform: scale(1.02);
                    z-index: 10;
                    border-color: #adb5bd !important;
                }
        </style>
}
else
{
    <div class="row">
        <div class="col-12 py-5 text-center border-0 rounded-4 bg-light mt-2 shadow-sm">
            <div class="mb-3">
                <i class="bi bi-lock-fill text-muted" style="font-size: 3.5rem; opacity: 0.5;"></i>
            </div>
            <h4 class="fw-bold text-dark">Acest cont este privat</h4>
            <p class="text-muted mx-auto" style="max-width: 350px;">
                Urmareste acest utilizator pentru a vedea fotografiile și clipurile postate.
            </p>
        </div>
    </div>
}

    <style>
        /* ========================================= */
        /* 1. STILURI BUTOANE PROFIL (RAMAN LA FEL)  */
        /* ========================================= */
        .action-btn {
            transition: all 0.2s ease-in-out;
            background-color: #f8f9fa;
            border-color: #dbdbdb !important;
            color: #262626;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-height: 38px;
        }

            .action-btn:hover {
                transform: translateY(-2px); /* Doar butoanele se ridica, NU postarile */
                background-color: #e2e5e9;
                box-shadow: 0 4px 6px rgba(0,0,0,0.05) !important;
                color: #000;
            }

            .action-btn:active {
                transform: translateY(0);
                background-color: #d3d6da;
            }

            .action-btn i {
                font-size: 1.1rem;
                vertical-align: middle;
            }

        .btn-primary.action-btn {
            background-color: #0d6efd;
            color: white;
            border-color: #0d6efd !important;
        }

            .btn-primary.action-btn:hover {
                background-color: #0b5ed7;
                color: white;
            }

        /* ========================================= */
        /* 2. STILURI POSTARI (FIXE - FARA MISCARE)  */
        /* ========================================= */

        .post-card-hover {
            position: relative;
            /* Fortam tranzitia sa fie 0 pentru transformari */
            transition: none !important;
            /* Ne asiguram ca nu exista transformari implicite */
            transform: none !important;
        }

        /* Asigura-te ca link-ul (<a>) se comporta ca un bloc solid */
        a.post-card-link {
            display: block;
        }

        /* Stratul invizibil pentru overlay (negru semi-transparent) */
        .post-card-hover::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            /* Negru semi-transparent (30%) uniform */
            background: rgba(0, 0, 0, 0.3);
            opacity: 0; /* Invizibil implicit */
            transition: opacity 0.2s ease-in-out;
            z-index: 1;
            pointer-events: none;
        }

        /* La hover apare DOAR overlay-ul, pozitia ramane FIXA */
        .post-card-hover:hover {
            cursor: pointer;
            /* Aici este cheia: suprascriem orice regula de miscare */
            transform: none !important;
            margin-top: 0 !important;
            box-shadow: 0 .125rem .25rem rgba(0,0,0,.075) !important; /* Pastram umbra originala (shadow-sm), nu o marim */
        }

            .post-card-hover:hover::after {
                opacity: 1;
            }

        /* ========================================= */
        /* 3. ICONITE (ALBE + UMBRA)                 */
        /* ========================================= */
        .drop-shadow-icon {
            filter: drop-shadow(0px 1px 2px rgba(0, 0, 0, 0.8));
            font-size: 1.1rem;
            display: inline-block;
        }
    </style>
