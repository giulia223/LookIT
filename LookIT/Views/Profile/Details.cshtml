@model LookIT.Models.ApplicationUser

@{
    ViewData["Title"] = "Profil - " + Model.FullName;
    bool showFullProfile = ViewBag.ShowFullProfile;
}

<div class="container mt-4">

    <div class="card mb-4 text-center border-0 shadow-sm">
        <div class="card-body">
            <img src="@Model.ProfilePictureUrl"
                 alt="Profile Picture"
                 class="rounded-circle mb-3"
                 style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #eee;" />

            <h3>@Model.FullName</h3>
            <div class="d-flex justify-content-center gap-5 my-3 text-center">

                <div>
                    <span class="fw-bold d-block fs-5">@ViewBag.PostsCount</span>
                    <small class="text-muted">Postări</small>
                </div>

                @if (showFullProfile)
                {
                    <a asp-action="Followers" asp-route-userId="@Model.Id" class="text-decoration-none text-dark">
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowersCount</span>
                        <small class="text-muted">Urmăritori</small>
                    </a>
                }
                else
                {
                    <div>
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowersCount</span>
                        <small class="text-muted">Urmăritori</small>
                    </div>
                }

                @if (showFullProfile)
                {
                    <a asp-action="Following" asp-route-userId="@Model.Id" class="text-decoration-none text-dark">
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowingCount</span>
                        <small class="text-muted">Urmăriri</small>
                    </a>
                }
                else
                {
                    <div>
                        <span class="fw-bold d-block fs-5">@ViewBag.FollowingCount</span>
                        <small class="text-muted">Urmăriri</small>
                    </div>
                }
            </div>

            <p class="text-muted">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    @Model.Description
                }
                else
                {
                    <em>Fără descriere.</em>
                }
            </p>

            @if (!Model.Public)
            {
                <span class="badge bg-secondary"><i class="bi bi-lock-fill"></i> Cont Privat</span>
            }

            <div class="mt-3 d-flex gap-2 justify-content-center">
                @if (ViewBag.IsOwner)
                {
                    <a asp-action="Edit" class="btn btn-outline-secondary btn-sm fw-bold">Editează Profil</a>

                    <a asp-controller="FollowRequests"  asp-action="MyRequests" class="btn btn-outline-danger btn-sm fw-bold position-relative ms-2">
                        <i class="bi bi-heart"></i> Cereri
                    </a>
                }
                else
                {
                    <form asp-action="FollowToggle" asp-route-userId="@Model.Id" method="post">

                        @if (ViewBag.IsFollowing)
                        {
                            <button type="submit" class="btn btn-outline-secondary btn-sm fw-bold px-4">
                                Unfollow
                            </button>
                        }
                        else if (ViewBag.IsPending)
                        {
                            <button type="submit" class="btn btn-secondary btn-sm fw-bold px-4 text-white">
                                Requested
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary btn-sm fw-bold px-4">
                                Follow
                            </button>
                        }
                    </form>
                }
            </div>
        </div>
    </div>

    <hr />

    @if (showFullProfile)
    {
        <div class="row">
            <hr />

            @if (showFullProfile)
            {
                <div class="row g-3">
                    @{
                        var posts = ViewBag.UserPosts as List<LookIT.Models.Post>;
                    }

                    @if (posts != null && posts.Any())
                    {
                        @foreach (var post in posts)
                        {
                            <div class="col-4">
                                <a asp-controller="Posts" asp-action="Show" asp-route-id="@post.PostId" class="text-decoration-none">

                                    <div class="ratio ratio-1x1 border rounded overflow-hidden position-relative shadow-sm bg-light">

                                        @if (!string.IsNullOrEmpty(post.ImageUrl))
                                        {
                                            <img src="@post.ImageUrl" class="w-100 h-100" style="object-fit: cover;" alt="Post Image">
                                            <div class="position-absolute top-0 end-0 p-1 text-white">
                                                <i class="bi bi-image"></i>
                                            </div>
                                        }
                                        else if (!string.IsNullOrEmpty(post.VideoUrl))
                                        {
                                            <video class="w-100 h-100" style="object-fit: cover;" muted>
                                                <source src="@post.VideoUrl" type="video/mp4">
                                            </video>
                                            <div class="position-absolute top-50 start-50 translate-middle text-white fs-2">
                                                <i class="bi bi-play-circle-fill"></i>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center justify-content-center h-100 bg-secondary text-white p-2 text-center">
                                                <small>
                                                    @(post.TextContent?.Length > 50 ? post.TextContent.Substring(0, 50) + "..." : post.TextContent)
                                                </small>
                                            </div>
                                            <div class="position-absolute top-0 end-0 p-1 text-white">
                                                <i class="bi bi-card-text"></i>
                                            </div>
                                        }
                                    </div>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="alert alert-light text-center py-5">
                                <i class="bi bi-camera fs-1 text-muted"></i>
                                <p class="mt-3 text-muted">Încă nu există postări.</p>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-light rounded mt-3">
                    <h2 class="text-muted"><i class="bi bi-lock-fill"></i></h2>
                    <h4>Acest cont este privat</h4>
                    <p class="text-muted">Urmărește acest cont pentru a-i vedea fotografiile și videoclipurile.</p>
                </div>
            }
    </div>
        
       
    }
    else
    {
        <div class="text-center py-5 bg-light rounded">
            <h2 class="text-muted"><i class="bi bi-lock"></i></h2>
            <h4>Acest cont este privat</h4>
            <p class="text-muted">Urmărește acest cont pentru a-i vedea fotografiile și videoclipurile.</p>
        </div>
    }
</div>>