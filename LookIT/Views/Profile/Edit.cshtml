@model LookIT.Models.ApplicationUser
@{
    ViewData["Title"] = "Editează Profilul";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">

                    @* Header cu buton de Cancel *@
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="fw-bold mb-0">Editează Profilul</h4>
                        <a asp-controller="Profile" asp-action="Details" asp-route-userId="@Model.Id" class="btn btn-sm btn-outline-secondary rounded-pill">
                            <i class="bi bi-x-lg"></i> Anulează
                        </a>
                    </div>

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">

                        @* --- ZONA DE POZĂ (Cu Preview) --- *@
                        <div class="text-center mb-4">
                            <div class="position-relative d-inline-block">
                                @* Imaginea curentă sau placeholder *@
                                <img id="imagePreview"
                                     src="@(!string.IsNullOrEmpty(Model.ProfilePictureUrl) ? Model.ProfilePictureUrl : "/images/default-profile.png")"
                                     class="rounded-circle border border-3 border-light shadow-sm"
                                     style="width: 120px; height: 120px; object-fit: cover;" />

                                @* Butonul de editare suprapus *@
                                <label for="fileInput" class="position-absolute bottom-0 end-0 bg-white border shadow-sm rounded-circle p-2 cursor-pointer" style="cursor: pointer; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-camera-fill text-primary"></i>
                                </label>
                            </div>

                            @* Input ascuns *@
                            <input type="file" id="fileInput" name="profilePicture" class="d-none" accept="image/*" onchange="previewProfileImage(this)" />
                        </div>

                        @* --- INPUTURI --- *@
                        <div class="mb-3">
                            <label class="form-label small text-muted fw-bold ms-1">NUME COMPLET</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 rounded-start-3 ps-3">
                                    <i class="bi bi-person text-muted"></i>
                                </span>
                                <input asp-for="FullName" class="form-control bg-light border-0 rounded-end-3 py-2" placeholder="Numele tău" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger small ms-1"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label small text-muted fw-bold ms-1">DESCRIERE</label>
                            <textarea asp-for="Description" class="form-control bg-light border-0 rounded-3 p-3" rows="4" placeholder="Spune-ne ceva despre tine..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small ms-1"></span>
                        </div>

                        @* --- SWITCH CONFIDENȚIALITATE --- *@
                        <div class="bg-light p-3 rounded-3 mb-4 d-flex justify-content-between align-items-center">
                            <div>
                                <label class="form-check-label fw-bold d-block" for="publicSwitch">Profil Public</label>
                                <small class="text-muted" style="font-size: 0.8rem;">Dacă dezactivezi, doar urmăritorii îți văd postările.</small>
                            </div>
                            <div class="form-check form-switch">
                                <input asp-for="Public" class="form-check-input" type="checkbox" role="switch" id="publicSwitch" style="width: 3em; height: 1.5em;">
                            </div>
                        </div>

                        @* --- BUTON SAVE --- *@
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary rounded-pill py-2 fw-bold shadow-sm">
                                Salvează Modificările
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @* Script simplu pentru a vedea poza nouă înainte de a da Save *@
    <script>
        function previewProfileImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}