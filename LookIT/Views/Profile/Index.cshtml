@model LookIT.Models.ApplicationUser
@{
    ViewData["Title"] = "Profilul Meu";
}

<h2 class="mt-3 text-center">Profilul Meu</h2>

<div class="d-flex flex-column align-items-center mt-4">

    <img src="@Model.ProfilePictureUrl"
         class="rounded-circle border"
         style="width:160px;height:160px;object-fit:cover;" />

    <h3 class="mt-3">@Model.FullName</h3>

    <p class="text-muted">@Model.Description</p>

    <p><strong>Vizibilitate:</strong> @(Model.Public ? "Public" : "Privat")</p>

    <a href="/Profile/Edit" class="btn btn-outline-primary mt-3">Editeaza Profilul</a>
</div>

