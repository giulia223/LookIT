@model List<LookIT.Models.ApplicationUser>

<div class="container mt-4" style="max-width: 600px;">
    <h4 class="mb-3">@ViewData["Title"]</h4>
    <hr />

    @if (!Model.Any())
    {
        <div class="text-center text-muted mt-5">
            Nu există utilizatori în această listă.
        </div>
    }
    else
    {
        <ul class="list-group list-group-flush">
            @foreach (var user in Model)
            {
                <li class="list-group-item d-flex align-items-center py-3 border-0">
                    <a asp-action="Details" asp-route-userId="@user.Id" class="d-flex align-items-center text-decoration-none text-dark">
                        <img src="@user.ProfilePictureUrl"
                             class="rounded-circle me-3 border"
                             style="width: 45px; height: 45px; object-fit: cover;">

                        <div>
                            <div class="fw-bold">@user.FullName</div>
                        </div>
                    </a>

                </li>
            }
        </ul>
    }

    <div class="mt-3">
        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-sm">Înapoi</a>
    </div>
</div>