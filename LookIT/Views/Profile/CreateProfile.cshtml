@model LookIT.Models.ViewModels.CreateProfileViewModel
@{
    ViewData["Title"] = "Creeaza Profil";
}

<h2 class="mt-3 text-center">Creeaza Profil</h2>

<form asp-action="CreateProfile" method="post" enctype="multipart/form-data" class="mt-4">

    <div class="mb-3">
        <label class="form-label">Nume complet</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Descriere</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Poza de profil</label>
        <input type="file" asp-for="ProfilePicture" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="Public" type="checkbox" class="form-check-input" />
        <label class="form-check-label">Profil public</label>
    </div>

    <button type="submit" class="btn btn-primary w-100">Salveaza profilul</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
