@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager
@model LookIT.Models.Message

@{
    ViewBag.Title = "Edit Message";
}

<div style="background-color: #f0f2f5; min-height: 100vh; padding-top: 50px; padding-bottom: 50px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-7">

                @* Mesaj de alertă din TempData sau ViewBag *@
                @if (TempData["message"] != null)
                {
                    <div class="alert rounded-3 text-center mb-4 shadow-sm alert-danger" style="border: none; padding: 1rem;">
                        @TempData["message"]
                    </div>
                }

                @* Cardul Formularului *@
                <div class="card border-0 shadow-sm" style="border-radius: 12px; overflow: hidden;">

                    @* Header Card *@
                    <div class="card-header border-0 bg-white pt-4 pb-0 px-4 text-center">
                        <h3 class="fw-bold" style="color: #845763;">Edit Your Message</h3>
                        <p class="text-muted small">Modifică conținutul mesajului tău</p>
                        <hr style="color: #ddd;" />
                    </div>

                    <div class="card-body p-4">
                        @* Atenție: asp-route-id trebuie să fie ID-ul mesajului pentru ruterul de editare *@
                        <form asp-controller="Messages" asp-action="Edit" asp-route-id="@Model.MessageId" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>
                            @* Câmpuri ascunse necesare pentru Model Binding *@
                            <input type="hidden" asp-for="MessageId" />
                            <input type="hidden" asp-for="GroupId" />

                            <div class="form-group mb-3">

                                <label class="form-label fw-bold">Imagine</label>
                                <input type="file" name="Image" id="imageInput" class="form-control" accept="image/*" />
                                <small class="text-muted">Formate acceptate: jpg, jpeg, png, gif.</small>

                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div id="currentImageContainer" class="mt-3 p-2 border rounded bg-light position-relative text-center">
                                        <p class="mb-1 text-muted small">Imagine curentă</p>
                                        <img src="@Model.ImageUrl" alt="Current Image" class="img-fluid rounded border mx-auto d-block" style="max-height: 300px;" />
                                    </div>

                                    <div class="form-check mt-2 d-inline-block text-start" id="deleteImage">
                                        <input class="form-check-input border-danger" type="checkbox" name="DeleteImage" value="true" id="deleteImageCheck">
                                        <label class="form-check-label text-danger fw-bold" for="deleteImageCheck">Sterge imaginea</label>
                                    </div>
                                }

                                <div id="newImageContainer" class="mt-3 d-none p-2 border rounded bg-light position-relative text-center">
                                    <p class="mb-1 text-muted small">Imagine nouă</p>
                                    <img id="newImagePreview" src="#" class="img-fluid rounded mx-auto d-block" style="max-height: 300px;" />
                                </div>

                            </div>

                            <div class="form-group mb-3">

                                <label class="form-label fw-bold">Video</label>
                                <input type="file" name="Video" id="videoInput" class="form-control" accept="video/*" />
                                <small class="text-muted">Formate acceptate: MP4, WebM, etc.</small>

                                @if (!string.IsNullOrEmpty(Model.VideoUrl))
                                {
                                    <div id="currentVideoContainer" class="mt-3 p-2 border rounded bg-light position-relative text-center">

                                        <p class="mb-1 text-muted small">Video curent</p>
                                        <video controls class="w-100 rounded border mx-auto d-block" style="max-height: 300px;">
                                            <source src="@Model.VideoUrl" type="video/mp4">
                                        </video>
                                    </div>

                                    <div class="form-check mt-2 d-inline-block text-start" id="deleteVideo" ">
                                        <input class="form-check-input border-danger" type="checkbox" name="DeleteVideo" value="true" id="deleteVideoCheck">
                                        <label class="form-check-label text-danger fw-bold" for="deleteVideoCheck">Sterge videoclip</label>
                                    </div>
                                }

                                <div id="newVideoContainer" class="mt-3 d-none p-2 border rounded bg-light position-relative text-center">
                                    <p class="mb-1 text-muted small">Video nou</p>
                                    <video id="newVideoPreview" controls class="w-100 rounded mx-auto d-block" style="max-height: 300px;">
                                        Your browser does not support the video tag.
                                    </video>
                                </div>

                            </div>
                            @* Input Content Mesaj *@
                            <div class="form-group mb-3">
                                <label asp-for="TextContent" class="form-label fw-bold" style="color: #4b4f56;">Conținut mesaj</label>
                                <div class="bg-white">
                                    <textarea asp-for="TextContent" class="form-control summernote"></textarea>
                                </div>
                                <span asp-validation-for="TextContent" class="text-danger small"></span>
                            </div>

                            @* Butoane Acțiune *@
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-lg shadow-sm"
                                        style="background-color: #845763; border: none; color: white; font-weight: 600; border-radius: 8px;">
                                    Save Changes
                                </button>

                                <a href="/Groups/Show/@Model.GroupId" class="btn btn-link text-decoration-none text-muted small">
                                    Discard changes and go back
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <small class="text-muted">Postat la: @Model.Date.ToString("dd/MM/yyyy HH:mm")</small>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    /* Stil pentru a integra Summernote mai bine în card */
    .note-editor.note-frame {
        border: 1px solid #dee2e6 !important;
        border-radius: 8px !important;
    }

    .note-toolbar {
        background-color: #f8f9fa !important;
        border-bottom: 1px solid #dee2e6 !important;
    }

    .btn-lg:hover {
        filter: brightness(0.9);
        transition: 0.2s;
    }
</style>

@section Scripts{
    <script>
        $('.summernote').summernote({
            height: 200,
            disableDragAndDrop: true,
            placeholder: 'Scrie mesajul tău aici...',
            // Definim fonturile exact ca în imaginea ta
            fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New', 'Helvetica', 'Impact', 'Tahoma', 'Times New Roman', 'Verdana'],
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'italic', 'underline', 'strikethrough', 'superscript', 'subscript', 'clear']],
                ['fontname', ['fontname']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph', 'height']],
                ['table', ['table']],
                ['insert', ['link', 'hr']], // Am eliminat 'picture' și 'video'
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>
}