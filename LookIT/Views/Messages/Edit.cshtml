@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager
@model LookIT.Models.Message

<div class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">

                @if (TempData["message"] != null)
                {

                    <div class="alert text-center mb-4 shadow-sm p-3 border-0" style="background-color: #F0F2F5; color: #B13079; border-radius: 12px;">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        @TempData["message"]
                    </div>
                }

                <div class="card lookit-card-form border-0 shadow-sm rounded-4 bg-white">

                    <div class="card-header bg-white border-bottom py-3 px-4">
                        <h5 class="fw-bold mb-0 text-black">Editează Mesajul Tău</h5>
                    </div>

                    <div class="card-body p-4">
                        <form asp-controller="Messages" asp-action="Edit" asp-route-id="@Model.MessageId" method="post" enctype="multipart/form-data">

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>
                            <input type="hidden" asp-for="MessageId" />
                            <input type="hidden" asp-for="GroupId" />

                            <div class="mb-4">
                                <label asp-for="TextContent" class="form-label fw-bold text-black small text-uppercase">Conținut mesaj</label>
                                <textarea asp-for="TextContent" class="form-control summernote"></textarea>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label class="form-label fw-bold text-black small text-uppercase">Imagine</label>
                                    <div class="position-relative">
                                        <input type="file" name="Image" id="imageInput" class="position-absolute top-0 start-0 w-100 h-100 opacity-0 cursor-pointer" style="z-index: 10;" accept="image/*" />
                                        <div class="upload-zone py-3 text-center rounded-3">
                                            <i class="bi bi-image fs-4 d-block mb-1"></i>
                                            <span class="small fw-bold">Schimbă Foto</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold text-black small text-uppercase">Video</label>
                                    <div class="position-relative">
                                        <input type="file" name="Video" id="videoInput" class="position-absolute top-0 start-0 w-100 h-100 opacity-0 cursor-pointer" style="z-index: 10;" accept="video/*" />
                                        <div class="upload-zone py-3 text-center rounded-3">
                                            <i class="bi bi-camera-video fs-4 d-block mb-1"></i>
                                            <span class="small fw-bold">Schimbă Video</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div id="currentImageContainer" class="p-3 rounded-4 mb-4 text-center" style="background-color: #F8F9FA; border: 1px solid #E4E6EB;">
                                    <p class="text-black small fw-bold text-uppercase mb-3">Imagine curentă</p>
                                    <img src="@Model.ImageUrl" class="img-fluid rounded-3 shadow-sm mb-3" style="max-height: 250px;" />

                                    <div class="form-check d-flex justify-content-center">
                                        <input class="form-check-input me-2 shadow-none border-danger" type="checkbox" name="DeleteImage" value="true" id="delImg">
                                        <label class="form-check-label text-danger fw-bold small" for="delImg">Șterge această imagine</label>
                                    </div>
                                </div>
                            }

                            <div id="newImageContainer" class="d-none p-3 rounded-4 mb-4 text-center" style="background-color: #F8F9FA; border: 1px solid #E4E6EB;">
                                <p class="text-black small fw-bold text-uppercase mb-2">Previzualizare Nouă</p>
                                <img id="newImagePreview" src="#" class="img-fluid rounded-3 shadow-sm" style="max-height: 250px;" />
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary btn-lg py-2 fw-bold rounded-pill shadow-sm">
                                    Salvează Modificările
                                </button>
                                <a href="/Groups/Show/@Model.GroupId" class="btn-discard text-decoration-none">
                                    Anulează
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .text-black {
        color: #1c1e21 !important;
    }

    .upload-zone {
        background-color: #F0F2F5;
        border: 1px solid #E4E6EB;
        color: #8d949e;
        transition: all 0.2s ease;
    }

        .upload-zone:hover {
            background-color: #E4E6EB;
            color: #1c1e21;
            border-color: #ccd0d5;
        }

    .btn-discard {
        text-align: center;
        color: #8d949e;
        font-weight: 600;
        font-size: 0.9rem;
        padding: 10px;
        border-radius: 50rem;
        transition: all 0.2s ease;
    }

        .btn-discard:hover {
            background-color: #FDF2F7;
            color: #B13079;
        }

    .note-editor.note-frame {
        border: 1px solid #E4E6EB !important;
        border-radius: 12px !important;
        overflow: hidden;
    }
</style>