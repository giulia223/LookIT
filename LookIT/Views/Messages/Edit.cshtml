@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager
@model LookIT.Models.Message

@{
    ViewData["Title"] = "Edit Message";
}

<div class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">

                @if (TempData["message"] != null)
                {
                    <div class="alert bg-light text-center mb-4 shadow-sm p-3 border-0" style="color: #B13079; border-radius: 12px;">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        @TempData["message"]
                    </div>
                }

                <div class="card lookit-card-form border-0 shadow-sm rounded-4 overflow-visible">

                    <div class="card-header bg-white border-bottom py-3 px-4 d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold mb-0 lookit-title">Editează Mesajul Tău</h5>
                       
                    </div>

                    <div class="card-body p-4">
                        <form asp-controller="Messages" asp-action="Edit" asp-route-id="@Model.MessageId" method="post" enctype="multipart/form-data">

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>
                            <input type="hidden" asp-for="MessageId" />
                            <input type="hidden" asp-for="GroupId" />

                            <div class="mb-4">
                                <label asp-for="TextContent" class="form-label fw-bold lookit-title small text-uppercase">Conținut mesaj</label>
                                <textarea asp-for="TextContent" class="form-control summernote"></textarea>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label class="form-label fw-bold lookit-title small text-uppercase">Imagine</label>
                                    <div class="position-relative">
                                        <input type="file" name="Image" id="imageInput" class="position-absolute top-0 start-0 w-100 h-100 opacity-0 cursor-pointer" style="z-index: 10;" accept="image/*" />
                                        <div class="lookit-upload-box shadow-sm py-3 text-center rounded-3 bg-light">
                                            <i class="bi bi-image fs-3 d-block mb-1 text-magenta"></i>
                                            <span class="small fw-bold text-magenta">Schimbă Foto</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold lookit-title small text-uppercase">Video</label>
                                    <div class="position-relative">
                                        <input type="file" name="Video" id="videoInput" class="position-absolute top-0 start-0 w-100 h-100 opacity-0 cursor-pointer" style="z-index: 10;" accept="video/*" />
                                        <div class="lookit-upload-box shadow-sm py-3 text-center rounded-3 bg-light">
                                            <i class="bi bi-camera-video-fill fs-3 d-block mb-1 text-magenta"></i>
                                            <span class="small fw-bold text-magenta">Schimbă Video</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-12">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <div id="currentImageContainer" class="bg-light text-center p-3 rounded-3 border-0 mb-3">
                                            <p class="lookit-title small fw-bold text-uppercase mb-2">Imagine curentă</p>
                                            <img src="@Model.ImageUrl" class="img-fluid rounded-3 shadow-sm mb-2" style="max-height: 200px;" />
                                            <div class="form-check d-flex justify-content-center">
                                                <input class="form-check-input border-danger me-2 shadow-none" type="checkbox" name="DeleteImage" value="true" id="delImg">
                                                <label class="form-check-label text-danger fw-bold small" for="delImg">Șterge imaginea</label>
                                            </div>
                                        </div>
                                    }
                                    <div id="newImageContainer" class="d-none bg-light text-center p-3 rounded-3 mb-3">
                                        <p class="lookit-title small fw-bold text-uppercase mb-2">Previzualizare Nouă</p>
                                        <img id="newImagePreview" src="#" class="img-fluid rounded-3 shadow-sm" style="max-height: 200px;" />
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-3 mt-4">
                                <button type="submit" class="btn btn-primary-lookit btn-lg py-3">
                                    <i class="bi bi-check-circle-fill me-2"></i> Salvează Modificările
                                </button>

                                <a href="/Groups/Show/@Model.GroupId" class="btn-discard-lookit text-center py-2">
                                    Anulează și abandonează
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .text-magenta {
        color: #B13079 !important;
    }

    .lookit-card-form {
        border-radius: 20px !important;
    }
</style>

