@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager
@model LookIT.Models.Message

@{
    ViewData["Title"] = "Creează un mesaj";
}

<div class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">

                @if (ViewBag.message != null)
                {
                    <div class="alert shadow-sm text-center mb-4">
                        <i class="bi bi-check-circle-fill me-2"></i> @ViewBag.message
                    </div>
                }

                <div class="card border-0 shadow-sm rounded-4 lookit-card-form overflow-visible">

                    <div class="card-header bg-white border-bottom py-3 px-4 d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold mb-0 lookit-title">Trimite Mesaj Nou</h5>
                        
                    </div>

                    <div class="card-body p-4">
                        <form asp-controller="Messages" asp-action="New" method="post" enctype="multipart/form-data">

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>
                            <input type="hidden" asp-for="GroupId" />

                            <div class="mb-4">
                                <label asp-for="TextContent" class="form-label fw-bold lookit-title small text-uppercase">Conținut mesaj</label>
                                <textarea asp-for="TextContent" class="form-control summernote border-0 shadow-none"
                                          placeholder="Scrie mesajul tău aici..."></textarea>
                                <span asp-validation-for="TextContent" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold lookit-title small text-uppercase">Adaugă în mesajul tău</label>
                                <div class="row g-2">

                                    <div class="col-6 position-relative">
                                        <input type="file" name="Image" id="imageInput"
                                               class="position-absolute top-0 start-0 w-100 h-100 opacity-0 cursor-pointer"
                                               accept="image/*" style="z-index: 10;" />
                                        <div class="lookit-upload-box shadow-sm text-center">
                                            <i class="bi bi-image-fill fs-3 d-block"></i>
                                            <span class="small fw-bold">Foto</span>
                                        </div>
                                    </div>

                                    <div class="col-6 position-relative">
                                        <input type="file" name="Video" id="videoInput"
                                               class="position-absolute top-0 start-0 w-100 h-100 opacity-0 cursor-pointer"
                                               accept="video/*" style="z-index: 10;" />
                                        <div class="lookit-upload-box shadow-sm text-center">
                                            <i class="bi bi-camera-video-fill fs-3 d-block"></i>
                                            <span class="small fw-bold">Video</span>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div id="imagePreviewContainer" class="mb-3 d-none position-relative">
                                <div class="lookit-current-media text-center position-relative">
                                    <img id="imagePreview" src="#" class="img-fluid rounded-3" style="max-height: 350px;" />
                                    <button type="button" id="removeImage" class="btn btn-light rounded-circle position-absolute top-0 end-0 m-2 shadow-sm border-0">
                                        <i class="bi bi-trash3-fill text-danger"></i>
                                    </button>
                                </div>
                            </div>

                            <div id="videoPreviewContainer" class="mb-3 d-none position-relative">
                                <div class="lookit-current-media text-center position-relative">
                                    <video id="videoPreview" controls class="w-100 rounded-3" style="max-height: 350px;"></video>
                                    <button type="button" id="removeVideo" class="btn btn-light rounded-circle position-absolute top-0 end-0 m-2 shadow-sm border-0" style="z-index: 20;">
                                        <i class="bi bi-trash3-fill text-danger"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="d-grid gap-3 mt-4">
                                <button type="submit" class="btn btn-primary-lookit btn-lg py-3">
                                    <i class="bi bi-send-fill me-2"></i> Trimite Mesaj
                                </button>

                                <a href="/Groups/Show/@Model.GroupId" class="btn-discard-lookit text-center py-2">
                                    Renunță
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
 
    .card {
        overflow: visible !important;
    }

    .cursor-pointer {
        cursor: pointer;
    }
</style>

