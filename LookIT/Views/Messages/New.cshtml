@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager
@model LookIT.Models.Message

@{
    ViewData["Title"] = "Trimite un mesaj";
}

<div class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">

                @if (ViewBag.message != null)
                {

                    <div class="alert text-center mb-4 shadow-sm border-0" style="background-color: #E7F0FF; color: #0D6EFD; border-radius: 12px;">
                        <i class="bi bi-check-circle-fill me-2"></i> @ViewBag.message
                    </div>
                }

                <div class="card border-0 shadow-sm rounded-4 bg-white overflow-visible">

                    <div class="card-header bg-white border-bottom py-3 px-4">
                        <h5 class="fw-bold mb-0 text-black">Trimite Mesaj Nou</h5>
                    </div>

                    <div class="card-body p-4">
                        <form asp-controller="Messages" asp-action="New" method="post" enctype="multipart/form-data">

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>
                            <input type="hidden" asp-for="GroupId" />

                            <div class="mb-4">
                                <label asp-for="TextContent" class="form-label fw-bold text-black small text-uppercase">Conținut mesaj</label>
                                <textarea asp-for="TextContent" class="form-control summernote border-0 shadow-none"
                                          placeholder="Scrie mesajul tău aici..."></textarea>
                                <span asp-validation-for="TextContent" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-black small text-uppercase">Adaugă media</label>
                                <div class="row g-2">

                                    <div class="col-6 position-relative">
                                        <input type="file" name="Image" id="imageInput"
                                               class="position-absolute top-0 start-0 w-100 h-100 opacity-0 cursor-pointer"
                                               accept="image/*" style="z-index: 10;" />
                                        <div class="upload-zone-compact text-center py-3 rounded-3">
                                            <i class="bi bi-image fs-4 d-block mb-1"></i>
                                            <span class="small fw-bold">Foto</span>
                                        </div>
                                    </div>

                                    <div class="col-6 position-relative">
                                        <input type="file" name="Video" id="videoInput"
                                               class="position-absolute top-0 start-0 w-100 h-100 opacity-0 cursor-pointer"
                                               accept="video/*" style="z-index: 10;" />
                                        <div class="upload-zone-compact text-center py-3 rounded-3">
                                            <i class="bi bi-camera-video fs-4 d-block mb-1"></i>
                                            <span class="small fw-bold">Video</span>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            @* Previzualizare Imagini  *@
                            <div id="imagePreviewContainer" class="mb-3 d-none">
                                <div class="p-3 rounded-4 position-relative" style="background-color: #F8F9FA; border: 1px solid #E4E6EB;">
                                    <img id="imagePreview" src="#" class="img-fluid rounded-3 shadow-sm mx-auto d-block" style="max-height: 350px;" />
                                    <button type="button" id="removeImage" class="btn btn-light rounded-circle position-absolute top-0 end-0 m-3 shadow-sm border-0">
                                        <i class="bi bi-trash3-fill text-danger"></i>
                                    </button>
                                </div>
                            </div>

                            @* Previzualizare Video *@
                            <div id="videoPreviewContainer" class="mb-3 d-none">
                                <div class="p-3 rounded-4 position-relative" style="background-color: #F8F9FA; border: 1px solid #E4E6EB;">
                                    <video id="videoPreview" controls class="w-100 rounded-3 shadow-sm" style="max-height: 350px;"></video>
                                    <button type="button" id="removeVideo" class="btn btn-light rounded-circle position-absolute top-0 end-0 m-3 shadow-sm border-0">
                                        <i class="bi bi-trash3-fill text-danger"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary btn-lg py-2 fw-bold rounded-pill shadow-sm">
                                    <i class="bi bi-send-fill me-2"></i> Trimite Mesaj
                                </button>

                                <a href="/Groups/Show/@Model.GroupId" class="btn-discard text-decoration-none">
                                    Renunță
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    
    body {
        background-color: #F7F8FA;
    }

    .text-black {
        color: #1c1e21 !important;
    }


    .upload-zone-compact {
        background-color: #F0F2F5;
        border: 1px solid #E4E6EB;
        color: #8d949e;
        transition: all 0.2s ease;
    }

        .upload-zone-compact:hover {
            background-color: #E4E6EB;
            color: #1c1e21;
            transform: translateY(-2px);
        }

 
    .btn-discard {
        text-align: center;
        color: #8d949e;
        font-weight: 600;
        font-size: 0.9rem;
        padding: 10px;
        border-radius: 50rem;
        transition: all 0.2s ease;
    }

        .btn-discard:hover {
            background-color: #FDF2F7;
            color: #B13079;
        }

    .cursor-pointer {
        cursor: pointer;
    }

    .note-editor.note-frame {
        border: 1px solid #E4E6EB !important;
        border-radius: 12px !important;
        overflow: hidden;
    }
</style>