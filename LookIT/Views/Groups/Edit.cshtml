@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager
@model LookIT.Models.Group

<div class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">

                @if (ViewBag.message != null)
                {

                    <div class="alert text-center mb-4 shadow-sm p-3 border-0" style="background-color: #F0F2F5; color: #B13079; border-radius: 12px;">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        @ViewBag.message
                    </div>
                }

                <div class="card lookit-card-form border-0 shadow-sm" style="background-color: #ffffff; border-radius: 15px;">

                    <div class="card-header border-0 bg-white pt-4 pb-0 px-4 text-center">
                        <h3 class="fw-bold" style="color: #1c1e21;">Editeaza Grup</h3>
                        <p class="text-muted small">Configurează setările comunității tale</p>
                        <hr style="border-top: 1px solid #E4E6EB; opacity: 1;" />
                    </div>

                    <div class="card-body p-4">
                        <form asp-controller="Groups" asp-action="Edit" asp-route-id="@Model.GroupId" method="post">
                            <input type="hidden" asp-for="GroupId" />

                            <div class="form-group mb-3">
                                <label asp-for="GroupName" class="form-label fw-bold ms-1" style="color: #1c1e21; font-size: 0.9rem;">Numele Grupului</label>
                                <div class="input-group">
                                    <span class="input-group-text border-0 custom-addon">
                                        <i class="bi bi-pencil-square"></i>
                                    </span>
                                    <input asp-for="GroupName" class="form-control custom-input"
                                           placeholder="Ex: Comunitatea IT"
                                           style="border-radius: 0 12px 12px 0; padding: 12px;" />
                                </div>
                                <span asp-validation-for="GroupName" class="text-danger small ms-1"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Description" class="form-label fw-bold ms-1" style="color: #1c1e21; font-size: 0.9rem;">Descriere</label>
                                <textarea asp-for="Description" class="form-control lookit-textarea custom-input"
                                          placeholder="Despre ce este vorba în acest grup?"
                                          rows="5"
                                          style="border-radius: 12px; padding: 12px;"></textarea>
                                <span asp-validation-for="Description" class="text-danger small ms-1"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg py-2 shadow-sm"
                                        style="background-color: #B13079; border: none; font-weight: 700; border-radius: 50rem;">
                                    Salvează Modificările
                                </button>
                                <a asp-controller="Groups" asp-action="Show" asp-route-id="@Model.GroupId"
                                   class="btn-discard text-decoration-none">
                                    Renunță
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    body {
        background-color: #FFF5F8;
    }

    .custom-input {
        background-color: #F0F2F5 !important;
        border: 1px solid #E4E6EB !important;
        color: #1c1e21 !important;
        transition: all 0.2s ease-in-out !important;
    }

        .custom-input:focus {
            background-color: #ffffff !important;
            border-color: #B13079 !important;
            box-shadow: 0 0 0 0.2rem rgba(177, 48, 121, 0.1) !important;
            outline: none !important;
        }

    .custom-addon {
        background-color: #F0F2F5 !important;
        border: 1px solid #E4E6EB !important;
        border-right: none !important;
        color: #8d949e;
        border-radius: 12px 0 0 12px !important;
    }

    .input-group:focus-within .custom-addon {
        background-color: #ffffff !important;
        border-color: #B13079 !important;
        color: #B13079 !important;
    }

    .btn-discard {
        text-align: center;
        margin-top: 0.5rem;
        color: #8d949e;
        font-weight: 600;
        font-size: 0.9rem;
        display: block;
        padding: 8px;
        border-radius: 50rem;
    }

        .btn-discard:hover {
            color: #B13079;
            background-color: #FDF2F7;
        }

    .lookit-textarea {
        resize: none;
    }
</style>