
@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager
@model LookIT.Models.Group

        <div class="py-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-5">

                        @if (ViewBag.message != null)
                        {
                            <div class="alert bg-light text-center mb-4 shadow-sm p-3" style="color: #B13079; border: none; border-radius: 12px;">
                                <i class="bi bi-info-circle-fill me-2"></i>
                                @ViewBag.message
                            </div>
                        }

                        <div class="card lookit-card-form border-0 shadow-sm">

                            <div class="card-header border-0 bg-white pt-4 pb-0 px-4 text-center">
                                <h3 class="fw-bold lookit-title">Edit Group Settings</h3>
                                <p class="text-muted small">Actualizează informațiile comunității tale.</p>
                                <hr class="opacity-10" />
                            </div>

                            <div class="card-body p-4">
                                <form asp-controller="Groups" asp-action="Edit" asp-route-id="@Model.GroupId" method="post">
                                    <input type="hidden" asp-for="GroupId" />

                                    @* Input Nume Grup *@
                                    <div class="form-group mb-3">
                                        <label asp-for="GroupName" class="form-label fw-bold text-dark">Group Name</label>
                                        <div class="input-group">

                                            <span class="input-group-text border-0" style="border-radius: 12px 0 0 12px;">
                                                <i class="bi bi-pencil-square" style="color: #B13079;"></i>
                                            </span>
                                            <input asp-for="GroupName" class="form-control bg-light"
                                                   placeholder="Numele grupului"
                                                   style="border-radius: 0 12px 12px 0; padding: 12px;" />
                                        </div>
                                        <span asp-validation-for="GroupName" class="text-danger small"></span>
                                    </div>
         
                                    <div class="form-group mb-4">
                                        <label asp-for="Description" class="form-label fw-bold text-dark">Description</label>
                                        <textarea asp-for="Description" class="form-control bg-light lookit-textarea" rows="5"></textarea>
                                        <span asp-validation-for="Description" class="text-danger small"></span>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary btn-lg shadow-sm py-2">
                                            Save Changes
                                        </button>

                                        <a asp-controller="Groups" asp-action="Show" asp-route-id="@Model.GroupId"
                                           class="btn-discard text-center text-decoration-none mt-2">
                                            Discard and go back
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

