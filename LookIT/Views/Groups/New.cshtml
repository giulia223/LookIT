
@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager
@model LookIT.Models.Group

<div style="background-color: #f0f2f5; min-height: 100vh; padding-top: 50px; padding-bottom: 50px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">

                @* Mesaj de alertă *@
                @if (ViewBag.message != null)
                {
                    <div class="alert rounded-3 text-center mb-4 shadow-sm"
                         style="background-color: #90C67F; color: white; border: none; padding: 1rem;">
                        @ViewBag.message
                    </div>
                }

                @* Cardul Formularului *@
                <div class="card border-0 shadow-sm" style="border-radius: 12px; overflow: hidden;">

                    @* Header Card *@
                    <div class="card-header border-0 bg-white pt-4 pb-0 px-4 text-center">
                        <h3 class="fw-bold" style="color: #845763;">Create New Group</h3>
                        <p class="text-muted small">Începe o comunitate nouă și invită-ți prietenii.</p>
                        <hr style="color: #ddd;" />
                    </div>

                    <div class="card-body p-4">
                        <form asp-controller="Groups" asp-action="New" method="post">

                            @* Input Nume Grup *@
                            <div class="form-group mb-3">
                                <label asp-for="GroupName" class="form-label fw-bold" style="color: #4b4f56;">Group Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0" style="border-radius: 8px 0 0 8px;">
                                        <i class="bi bi-people text-muted"></i>
                                    </span>
                                    <input asp-for="GroupName" class="form-control border-start-0 bg-light"
                                           placeholder="Ex: Pasionați de Tehnologie"
                                           style="border-radius: 0 8px 8px 0; padding: 10px;" />
                                </div>
                                <span asp-validation-for="GroupName" class="text-danger small"></span>
                            </div>

                            @* Input Descriere *@
                            <div class="form-group mb-4">
                                <label asp-for="Description" class="form-label fw-bold" style="color: #4b4f56;">Description</label>
                                <textarea asp-for="Description" class="form-control bg-light" rows="4"
                                          placeholder="Despre ce este acest grup?"
                                          style="border-radius: 8px; padding: 10px; resize: none;"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            @* Butoane Acțiune *@
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-lg shadow-sm"
                                        style="background-color: #E491A6; border: none; color: white; font-weight: 600; border-radius: 8px;">
                                    Create Group
                                </button>

                                <a asp-controller="GroupMembers" asp-action="Show" class="btn btn-link text-decoration-none text-muted small">
                                    Cancel and go back
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                @* Info suplimentar sub card *@
                <div class="text-center mt-4">
                    <p class="text-muted small">
                        <i class="bi bi-shield-check"></i> Vei deveni automat moderatorul acestui grup.
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    /* Efect de focus pentru input-uri */
    .form-control:focus {
        background-color: #fff !important;
        border-color: #E491A6;
        box-shadow: 0 0 0 0.25rem rgba(228, 145, 166, 0.25);
    }

    .input-group-text {
        border-color: #dee2e6;
    }
</style>

