@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager

@if (ViewBag.Message != null)
{
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="alert @ViewBag.Alert alert-dismissible fade show border-0 shadow-sm rounded-pill text-center py-2 px-4" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <span style="font-size: 0.95rem; font-weight: 500;">@ViewBag.Message</span>
                    <button type="button" class="btn-close small" data-bs-dismiss="alert" aria-label="Close" style="padding: 1rem;"></button>
                </div>
            </div>
        </div>
    </div>
}

@{
    var loggedUser = await UserManager.GetUserAsync(User);
}

<div class="container">
    <div class="row">
        <div class="col-md-9">
            @if (ViewBag.Groups != null && ViewBag.Groups.Count > 0)
            {
                @foreach (var group in ViewBag.Groups)
                {
                    <div class="card mb-3 mx-auto shadow-sm" style="max-width: 600px; background-color: #F8F6F7; border-left: 5px solid #92E4BA; border-radius: 0.5rem;">
                        <div class="card-body p-3">
                            @* Folosim partial-ul tau existent pentru info grup *@
                            <partial name="GroupInfo" model="group"></partial>

                            <div class="mt-3">
                                <a class="btn btn-sm btn-success rounded-pill px-3" asp-controller="Groups" asp-action="Show" asp-route-id="@group.GroupId">
                                    See details group
                                </a>
                            </div>
                        </div>
                    </div>
                }

                @* --- PAGINARE IDENTICA CU CEA DIN POSTARI --- *@
                @if (ViewBag.lastPage > 1)
                {
                    <div class="d-flex justify-content-center my-4">
                        @{
                            int currentPage = ViewBag.CurrentPage;
                            int lastPage = ViewBag.lastPage;
                            int prevPage = currentPage > 1 ? currentPage - 1 : 1;
                            int nextPage = currentPage < lastPage ? currentPage + 1 : lastPage;
                        }

                        <nav aria-label="Page navigation">
                            <ul class="pagination align-items-center gap-2">

                                @* --- BUTONUL PREVIOUS --- *@
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                                       href="@ViewBag.PaginationBaseUrl@prevPage"
                                       aria-label="Previous"
                                       style="width: 40px; height: 40px;">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>

                                @* --- BUTOANELE NUMEROTATE --- *@
                                @for (int i = 1; i <= lastPage; i++)
                                {
                                    if (i == 1 || i == lastPage || (i >= currentPage - 1 && i <= currentPage + 1))
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm fw-bold"
                                               href="@ViewBag.PaginationBaseUrl@i"
                                               style="width: 40px; height: 40px;">
                                                @i
                                            </a>
                                        </li>
                                    }
                                    else if (i == currentPage - 2 || i == currentPage + 2)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link border-0 bg-transparent text-muted">...</span>
                                        </li>
                                    }
                                }

                                @* --- BUTONUL NEXT --- *@
                                <li class="page-item @(currentPage == lastPage ? "disabled" : "")">
                                    <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                                       href="@ViewBag.PaginationBaseUrl@nextPage"
                                       aria-label="Next"
                                       style="width: 40px; height: 40px;">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>

                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                @* --- MESAJ "EMPTY STATE" STILIZAT --- *@
                <div class="d-flex align-items-center justify-content-center" style="min-height: 60vh;">
                    <div class="text-center">
                        <div class="mb-3">
                            <i class="bi bi-search text-muted" style="font-size: 5rem; opacity: 0.5;"></i>
                        </div>
                        <h3 class="text-muted fw-bold">Nu am găsit niciun grup</h3>
                        <p class="text-secondary mx-auto" style="max-width: 400px;">
                            Fii primul care creează o comunitate sau verifică mai târziu dacă au apărut altele noi!
                        </p>

           
                    </div>
                </div>
            }

        </div>
    </<div>

    <div class="col-md-3">
                @if (loggedUser is not null)
                {
                    <div class="sticky-top" style="top: 20px;">
                        <a class="btn w-100 mb-3 shadow-sm"
                           asp-controller="GroupMembers"
                           asp-action="Show"
                           style="background-color: #845763; color: white; border-radius: 0.5rem; font-weight: bold;">
                            <i class="bi bi-people-fill"></i> Your Groups
                        </a>

                        <p class="small text-muted text-center">Manage the communities you belong to.</p>
                    </div>
                }
    </div>
</div>
