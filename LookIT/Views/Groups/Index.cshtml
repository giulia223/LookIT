@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager

@{
    var loggedUser = await UserManager.GetUserAsync(User);
}

<div class="py-4">
    <div class="container">

        @* --- 1. ZONA DE SEARCH (SUS, CENTRAL) --- *@
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8">
                <div class="text-center mb-4">
                    <h2 class="fw-bold lookit-title" style="color: #B13079;">Explorează Comunități</h2>
                    <p class="text-muted">Găsește oameni cu aceleași pasiuni ca tine</p>
                </div>

                <form method="get" action="/Groups/Index">

                    <div class="search-container d-flex align-items-center p-2 shadow-sm">
                        <i class="bi bi-search ms-2"></i>
                        <input type="text"
                               class="search-input flex-grow-1 ms-3"
                               name="search"
                               value="@ViewBag.SearchString"
                               placeholder="Caută grupuri după nume sau descriere..."
                               aria-label="Search">

                        @if (!string.IsNullOrEmpty(ViewBag.SearchString))
                        {
                            <span onclick="location.href='/Groups/Index'"
                                  class="reset-search-btn me-2"
                                  title="Șterge filtrele">
                                <i class="bi bi-x-lg"></i>
                            </span>
                        }
                        <button class="btn btn-primary rounded-pill px-4" type="submit">Caută</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            @* --- 2. COLOANA PRINCIPALA (LISTA GRUPURI) --- *@
            <div class="col-md-8">
                @if (ViewBag.Groups != null && ViewBag.Groups.Count > 0)
                {
                    <div class="d-flex flex-column gap-3">
                        @foreach (var group in ViewBag.Groups)
                        {
                            <div class="card lookit-sidebar-card border-0 overflow-hidden">
                                <div class="card-body p-0">
                                    <div class="d-flex align-items-center justify-content-between pe-4">
                                        <div class="flex-grow-1">
                                            <partial name="_GroupInfo" model="group"></partial>
                                        </div>

                                        <div class="ms-3">
                                            <a class="btn btn-magenta-outline px-4 fw-bold"
                                               asp-controller="Groups" asp-action="Show" asp-route-id="@group.GroupId">
                                                Vezi detalii
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @* --- PAGINARE --- *@
                    @if (ViewBag.lastPage > 1)
                    {
                        <div class="d-flex justify-content-center my-5">
                            @{
                                int currentPage = ViewBag.CurrentPage;
                                int lastPage = ViewBag.lastPage;
                                int prevPage = currentPage > 1 ? currentPage - 1 : 1;
                                int nextPage = currentPage < lastPage ? currentPage + 1 : lastPage;
                            }

                            <nav aria-label="Page navigation">
                                <ul class="pagination align-items-center gap-2">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                                           href="@ViewBag.PaginationBaseUrl@prevPage" style="width: 42px; height: 42px;">
                                            <i class="bi bi-chevron-left" style="font-size: 1.2rem;"></i>
                                        </a>
                                    </li>

                                    @for (int i = 1; i <= lastPage; i++)
                                    {
                                        if (i == 1 || i == lastPage || (i >= currentPage - 1 && i <= currentPage + 1))
                                        {
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm fw-bold"
                                                   href="@ViewBag.PaginationBaseUrl@i" style="width: 42px; height: 42px;">
                                                    @i
                                                </a>
                                            </li>
                                        }
                                        else if (i == currentPage - 2 || i == currentPage + 2)
                                        {
                                            <li class="page-item disabled"><span class="page-link border-0 bg-transparent text-muted">...</span></li>
                                        }
                                    }

                                    <li class="page-item @(currentPage == lastPage ? "disabled" : "")">
                                        <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                                           href="@ViewBag.PaginationBaseUrl@nextPage" style="width: 42px; height: 42px;">
                                            <i class="bi bi-chevron-right" style="font-size: 1.2rem;"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5 lookit-sidebar-card shadow-sm">
                        <i class="bi bi-people text-muted opacity-25" style="font-size: 4rem;"></i>
                        <h4 class="lookit-title mt-3">Nu am găsit grupuri</h4>
                        <p class="text-muted">Încearcă alte cuvinte cheie!</p>
                    </div>
                }
            </div>

            @* --- 3. COLOANA LATERALA (SIDEBAR) --- *@
            <div class="col-md-4">
                <div class="sticky-top" style="top: 110px;">

                    @if (loggedUser is not null)
                    {
                        <div class="card lookit-sidebar-card border-0 mb-4">
                            <div class="card-body p-4 text-center">
                                <h6 class="fw-bold mb-3" style="color: #B13079;">Activitatea mea</h6>
                                <a class="btn btn-primary w-100 mb-3 py-2 d-flex align-items-center justify-content-center gap-2 shadow-sm"
                                   asp-controller="GroupMembers"
                                   asp-action="Show">
                                    <i class="bi bi-people-fill fs-5"></i> Grupurile mele
                                </a>
                                <p class="small text-muted mb-0">Gestionează comunitățile tale.</p>
                            </div>
                        </div>

                        <div class="card lookit-sidebar-card border-0">
                            <div class="card-body p-4">
                                <h6 class="fw-bold mb-4" style="color: #B13079;">Navigare rapidă</h6>
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-3">
                                        <a href="/Posts/Index" class="text-decoration-none text-dark d-flex align-items-center sidebar-link">
                                            <div class="icon-circle me-3">
                                                <i class="bi bi-house-door"></i>
                                            </div>
                                            <span class="fw-bold">Feed Principal</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-action="New" asp-controller="Groups" class="text-decoration-none text-dark d-flex align-items-center sidebar-link">
                                            <div class="icon-circle me-3">
                                                <i class="bi bi-plus-circle"></i>
                                            </div>
                                            <span class="fw-bold">Creează grup nou</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


    <style>

        .icon-circle {
            width: 42px;
            height: 42px;
            background-color: #F0F2F5;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
        }

            .icon-circle i {
                font-size: 1.4rem; 
                color: #B13079;
            }

        .sidebar-link:hover .icon-circle {
            background-color: #FDF2F7;
            transform: scale(1.05);
        }

        .sidebar-link:hover span {
            color: #B13079;
        }

        .page-link {
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
        }
    </style>
