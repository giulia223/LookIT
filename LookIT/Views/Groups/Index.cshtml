@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager

@if (ViewBag.Message != null)
{
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
  
                <div class="alert lookit-alert-success alert-dismissible fade show border-0 shadow-sm rounded-pill text-center py-2 px-4" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <span style="font-size: 0.95rem;">@ViewBag.Message</span>
                    <button type="button" class="btn-close small" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
}

@{
    var loggedUser = await UserManager.GetUserAsync(User);
}

<div class="container mt-4">
    <div class="row">

        <div class="col-md-8">
            <h4 class="fw-bold mb-4 ps-1 text-dark">Explorează Comunități</h4>

            @if (ViewBag.Groups != null && ViewBag.Groups.Count > 0)
            {
                @foreach (var group in ViewBag.Groups)
                {
                    <div class="card mb-3 mx-auto border-0 shadow-sm group-card-index" style="max-width: 650px;">
                        <div class="card-body p-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="flex-grow-1">
                                    <partial name="_GroupInfo" model="group"></partial>
                                </div>

                                <div class="ms-3">
                                    <a class="btn btn-magenta-outline rounded-pill px-4 fw-bold btn-sm"
                                       asp-controller="Groups" asp-action="Show" asp-route-id="@group.GroupId">
                                        Vezi detalii
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @* --- PAGINARE --- *@
                @if (ViewBag.lastPage > 1)
                {
                    <div class="d-flex justify-content-center my-5">
                        @{
                            int currentPage = ViewBag.CurrentPage;
                            int lastPage = ViewBag.lastPage;
                            int prevPage = currentPage > 1 ? currentPage - 1 : 1;
                            int nextPage = currentPage < lastPage ? currentPage + 1 : lastPage;
                        }

                        <nav aria-label="Page navigation">
                            <ul class="pagination align-items-center gap-2">
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                                       href="@ViewBag.PaginationBaseUrl@prevPage" style="width: 40px; height: 40px;">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>

                                @for (int i = 1; i <= lastPage; i++)
                                {
                                    if (i == 1 || i == lastPage || (i >= currentPage - 1 && i <= currentPage + 1))
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm fw-bold"
                                               href="@ViewBag.PaginationBaseUrl@i" style="width: 40px; height: 40px;">
                                                @i
                                            </a>
                                        </li>
                                    }
                                    else if (i == currentPage - 2 || i == currentPage + 2)
                                    {
                                        <li class="page-item disabled"><span class="page-link border-0 bg-transparent text-muted">...</span></li>
                                    }
                                }

                                <li class="page-item @(currentPage == lastPage ? "disabled" : "")">
                                    <a class="page-link rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                                       href="@ViewBag.PaginationBaseUrl@nextPage" style="width: 40px; height: 40px;">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people text-muted opacity-25" style="font-size: 4rem;"></i>
                    <h4 class="text-muted mt-3">Nu există grupuri momentan</h4>
                </div>
            }
        </div>

        @* --- COLOANA LATERALA  --- *@
        <div class="col-md-4">
            @if (loggedUser is not null)
            {
                <div class="sticky-top sticky-sidebar">
                    <div class="card border-0 shadow-sm lookit-sidebar-card overflow-hidden">
                        <div class="card-header bg-white border-0 pt-3 pb-0">
                            <h6 class="fw-bold text-magenta mb-0">Activitatea mea</h6>
                        </div>
                        <div class="card-body">
                            <a class="btn btn-primary w-100 mb-3 shadow-sm py-2"
                               asp-controller="GroupMembers"
                               asp-action="Show">
                                <i class="bi bi-people-fill me-2"></i> Grupurile mele
                            </a>
                            <p class="small text-muted text-center mb-0">Gestionează comunitățile din care faci parte.</p>
                        </div>
                    </div>

                    <div class="mt-4 ps-2">
                        <h6 class="text-muted small fw-bold text-uppercase">Link-uri utile</h6>
                        <ul class="list-unstyled small">
                            <li class="mb-2"><a href="/Posts/Index" class="text-decoration-none text-dark"><i class="bi bi-house-door me-2"></i>Feed Principal</a></li>
                            <li class="mb-2"><a asp-action="New" asp-controller="Groups" class="text-decoration-none text-dark"><i class="bi bi-plus-circle me-2"></i>Creează un grup nou</a></li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>