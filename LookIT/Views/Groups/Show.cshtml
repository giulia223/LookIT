@using Microsoft.AspNetCore.Identity
@using LookIT.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@model LookIT.Models.Group

@{
    ViewData["Title"] = "Group Details";
}

<div class="py-4">
    <div class="container">
        <div class="row justify-content-center">

            @* COLOANA CENTRALA (Feed si Info) *@
            <div class="col-md-8">

                @if (ViewBag.message != null)
                {
                    <div class="alert shadow-sm text-center mb-4">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        @ViewBag.message
                    </div>
                }

                @* HEADER GRUP *@
                <div class="card mb-4 shadow-sm border-0 overflow-hidden rounded-4">
                    <partial name="_GroupInfo" model="@ViewBag.GroupDetails"></partial>

                    <div class="card-footer bg-white border-0 px-4 pb-4">
                        @if (ViewBag.UserGroupStatus == "Pending")
                        {
                            <button type="button" class="btn btn-discard w-100 fw-bold opacity-75" disabled>
                                <i class="bi bi-clock-history me-1"></i> Cerere în așteptare
                            </button>
                        }
                        else if (ViewBag.UserGroupStatus == "Accepted")
                        {
                            <div class="d-flex flex-column gap-3">
                                <div class="lookit-badge-status text-center py-2 rounded-3">
                                    <i class="bi bi-person-check-fill me-2"></i> Ești membru al acestui grup
                                </div>

                                <form asp-controller="GroupMembers" asp-action="LeaveGroup" method="post" onsubmit="return confirm('Sigur vrei să părăsești acest grup?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="groupId" value="@ViewBag.GroupDetails.GroupId" />
                                    <button type="submit" class="btn btn-discard btn-sm w-100 border-0 fw-bold" style="color: #dc3545 !important;">
                                        <i class="bi bi-box-arrow-right me-1"></i> Părăsește grupul
                                    </button>
                                </form>
                            </div>
                        }
                        else if (ViewBag.UserGroupStatus == "moderator" || ViewBag.EsteAdministrator)
                        {
                            <div class="d-flex flex-column gap-2">
                                @if (!ViewBag.EsteAdministrator)
                                {
                                    <div class="lookit-badge-status text-center py-2 mb-2 rounded-3">
                                        <i class="bi bi-shield-check me-2"></i> Ești moderatorul grupului
                                    </div>
                                }

                                <div class="d-flex gap-2">
                                    <a asp-controller="Groups" asp-action="Edit" asp-route-id="@ViewBag.GroupDetails.GroupId"
                                       class="btn btn-discard flex-fill fw-bold py-2">
                                        <i class="bi bi-pencil-square me-1"></i> Editează
                                    </a>

                                    <form asp-controller="Groups" asp-action="Delete" asp-route-id="@ViewBag.GroupDetails.GroupId"
                                          method="post" class="flex-fill" onsubmit="return confirm('Ștergerea este definitivă. Continui?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-discard w-100 py-2 fw-bold" style="color: #dc3545 !important;">
                                            <i class="bi bi-trash3 me-1"></i> Șterge
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                            <form asp-controller="Groups" asp-action="JoinGroup" method="post" class="w-100">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="MemberId" value="@UserManager.GetUserId(User)" />
                                <input type="hidden" name="GroupId" value="@ViewBag.GroupDetails.GroupId" />
                                <button type="submit" class="btn btn-primary btn-lg w-100 py-3">
                                    <i class="bi bi-person-plus-fill me-1"></i> Alătură-te Grupului
                                </button>
                            </form>
                        }
                    </div>
                </div>

                @* MESAJE *@
                @if (SignInManager.IsSignedIn(User) && (ViewBag.UserGroupStatus == "Accepted" || ViewBag.UserGroupStatus == "moderator" || ViewBag.EsteAdministrator))
                {
                    <div class="d-flex justify-content-between align-items-center mb-4 mt-2">
                        <h5 class="fw-bold lookit-title mb-0">
                            <i class="bi bi-chat-left-text me-2"></i>Discuții
                        </h5>

                        <a class="btn btn-lookit-action-vibrant"
                           asp-controller="Messages"
                           asp-action="New"
                           asp-route-id="@ViewBag.GroupDetails.GroupId">
                            <i class="bi bi-plus-lg"></i> Mesaj Nou
                        </a>
                    </div>

                    @foreach (var m in ViewBag.Messages)
                    {
                        <div class="card mb-3 shadow-sm border-0 rounded-4 overflow-hidden">
                            <partial name="_MsgInfo" model="m"></partial>
                        </div>
                    }

                    @if (ViewBag.Messages.Count == 0)
                    {
                        <div class="lookit-card-empty text-center shadow-sm">
                            <i class="bi bi-chat-dots lookit-title opacity-25" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">Nu există mesaje. Începe o conversație!</p>
                        </div>
                    }
                }
                else
                {
                    <div class="lookit-card-empty text-center shadow-sm">
                        <i class="bi bi-lock-fill lookit-title opacity-25" style="font-size: 3rem;"></i>
                        <h5 class="mt-3 fw-bold lookit-title">Acest grup este privat</h5>
                        <p class="text-muted">Trebuie să fii membru pentru a vedea activitatea.</p>
                    </div>
                }
            </div>

            @* COLOANA LATERALA *@
            <div class="col-md-4">
                @* LISTA MEMBRI *@
                <div class="card shadow-sm border-0 mb-4 rounded-4">
                    <div class="card-body">
                        <h6 class="lookit-sidebar-title">Membri • @ViewBag.ActiveMembersCount</h6>

                        <div class="member-list scrollbar-lookit" style="max-height: 350px; overflow-y: auto; overflow-x: hidden; padding-right: 5px;">
                            @foreach (var member in ViewBag.GroupDetails.Members)
                            {
                                @if (member.Status != "Pending")
                                {
                                    <div class="d-flex align-items-center justify-content-between mb-3">
                                        <div class="d-flex align-items-center">
                                            <img src="@member.Member.ProfilePictureUrl" class="rounded-circle border-0 shadow-sm me-2" style="width:34px;height:34px;object-fit:cover;" />
                                            <span class="small fw-bold">
                                                <a asp-controller="Profile" asp-action="Details" asp-route-userId="@member.Member.Id" class="text-dark text-decoration-none hover-magenta">
                                                    @member.Member.FullName
                                                </a>
                                            </span>
                                        </div>

                                        @if (ViewBag.GroupDetails.ModeratorId == UserManager.GetUserId(User) && member.Member.Id != ViewBag.GroupDetails.ModeratorId)
                                        {
                                            <form method="post" asp-controller="GroupMembers" asp-action="RemoveMember" asp-route-groupId="@member.GroupId" asp-route-memberId="@member.MemberId">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@member.Member.Id" />
                                                <button type="submit" class="btn btn-sm text-danger border-0 p-0 opacity-50 hover-opacity-100" onclick="return confirm('Elimini acest utilizator?');">
                                                    <i class="bi bi-person-x fs-5"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

                @* CERERI IN ASTEPTARE *@
                @if (ViewBag.GroupDetails.ModeratorId == UserManager.GetUserId(User))
                {
                    var pendingRequests = ViewBag.PendingRequests;
                    @if (pendingRequests != null && pendingRequests.Count > 0)
                    {
                        <div class="card shadow-sm border-0 rounded-4 overflow-hidden mb-4" style="border-left: 4px solid #B13079 !important;">
                            <div class="card-body">
                                <h6 class="fw-bold mb-3 lookit-title">Cereri noi (@pendingRequests.Count)</h6>

                                <div class="pending-list scrollbar-lookit" style="max-height: 300px; overflow-y: auto; overflow-x: hidden; padding-right: 5px;">
                                    @foreach (var member in pendingRequests)
                                    {
                                        <div class="p-3 mb-2 bg-light rounded-3 shadow-none border-0">
                                            <div class="d-flex align-items-center mb-2">
                                                <img src="@member.Member.ProfilePictureUrl" class="rounded-circle me-2 shadow-sm" style="width:28px;height:28px;object-fit:cover;" />
                                                <span class="small fw-bold">@member.Member.FullName</span>
                                            </div>
                                            <form method="post" asp-controller="GroupMembers" asp-action="AcceptMember">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="MemberId" value="@member.Member.Id" />
                                                <input type="hidden" name="GroupId" value="@ViewBag.GroupDetails.GroupId" />

                                                <button type="submit" class="btn btn-primary btn-sm w-100 rounded-pill">Aprobă</button>
                                            </form>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<style>
    .hover-magenta:hover {
        color: #B13079 !important;
    }

    .hover-opacity-100:hover {
        opacity: 1 !important;
    }

</style>