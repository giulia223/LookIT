@model LookIT.Models.Group
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

<div class="group-header-fb shadow-sm bg-white rounded">
    <div class="group-cover" style="height: 150px; background: linear-gradient(to right, #92E4BA, #90C67F); border-radius: 0.5rem 0.5rem 0 0;"></div>
    <div class="p-3">
        <h2 class="fw-bold" style="color: #4b4f56;">@Model.GroupName</h2>
        <p class="text-muted"><i class="bi bi-info-circle"></i> @Model.Description</p>
        <div class="d-flex align-items-center border-top pt-2">
            <span class="badge bg-light text-dark border">
                <strong>Moderator:</strong>
                @(Model.ModeratorId == UserManager.GetUserId(User) ? "You" : Model.Moderator.FullName)
            </span>
        </div>
    </div>
</div>

<style>
    .group-header-fb {
        border: 1px solid #ddd;
        margin-bottom: 20px;
    }
</style>