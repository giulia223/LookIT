@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
}
<ul class="navbar-nav">

    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Groups" asp-action="Index">Groups</a>
    </li>

    @if (SignInManager.IsSignedIn(User) && currentUser != null)
{
     
        if (await UserManager.IsInRoleAsync(currentUser, "Administrator"))
        {
            <a class="nav-link text-danger fw-bold"
               asp-area=""
               asp-controller="Administrators"
               asp-action="Page">
                <i class="fas fa-screwdriver-wrench me-1"></i> ADMIN
            </a>
        }
        if (await UserManager.IsInRoleAsync(currentUser, "User"))
        {
            <a class="nav-link text-danger fw-bold"
               asp-area=""
               asp-controller="GroupMembers"
               asp-action="Show">
                Your Groups
            </a>
        }
        <a class="nav-link text-danger fw-bold"
           asp-area=""
           asp-controller="Profile"
           asp-action="Index">
            <img src="@currentUser.ProfilePictureUrl" class="rounded-circle border" style="width:30px;height:30px;object-fit:cover;" />
        </a>
     
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @currentUser.FullName!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Posts", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
       
}
else
{
        
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
