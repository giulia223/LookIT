@model LookIT.Models.Comment

<div class="d-flex gap-2 mb-3">
    @* --- AVATAR --- *@
    <div class="flex-shrink-0">
        <a asp-controller="Profile" asp-action="Details" asp-route-userId="@Model.UserId" class="text-decoration-none">
            <img src="@(!string.IsNullOrEmpty(Model.User.ProfilePictureUrl) ? Model.User.ProfilePictureUrl : "/images/unknown_person.jpg")"
                 class="rounded-circle border-0 shadow-sm" style="width: 32px; height: 32px; object-fit: cover;" />
        </a>
    </div>

    @* --- CONTINUT COMENTARIU --- *@
    <div class="flex-grow-1">
        @* Bula Roz *@
        <div class="lookit-comment-bubble rounded-4 px-3 py-2 d-inline-block shadow-sm" style="min-width: 150px; max-width: 100%;">
            <div class="d-flex align-items-center justify-content-between mb-0">
                <a asp-controller="Profile" asp-action="Details" asp-route-userId="@Model.UserId" class="text-decoration-none">
                    <span class="fw-bold text-black" style="font-size: 0.85rem;">
                        @(Model.User.FullName ?? "Utilizator necunoscut")
                    </span>
                </a>
            </div>
            <div class="text-break" style="font-size: 0.9rem; color: #4b2c35;">@Model.Content</div>
        </div>

        @* --- BARA DE ACTIUNI (ALINIATA PERFECT DREPT) --- *@
        <div class="d-flex align-items-center gap-2 ms-2 mt-1 action-row">
            <small class="text-muted date-text">
                @Model.Date.ToString("HH:mm")
                @if (Model.DateModified.HasValue)
                {
                    <span class="ms-1 italic-edit">• Editat</span>
                }
            </small>

            @if (Model.UserId == ViewBag.UserCurent || ViewBag.EsteAdministrator == true)
            {
                <span class="divider">|</span>

                @* Buton Editare *@
                <a class="comment-action-link edit-link"
                   asp-controller="Comments" asp-action="Edit" asp-route-id="@Model.CommentId">
                    Editează
                </a>

                @* Buton Ștergere *@
                <form method="post" asp-controller="Comments" asp-action="Delete" asp-route-id="@Model.CommentId" class="m-0 d-inline-flex align-items-center">
                    <button class="comment-action-link delete-link bg-transparent border-0 p-0" type="submit">
                        Sterge
                    </button>
                </form>
            }
        </div>
    </div>
</div>

<style>
    /* 1. Eliminarea conturului albastru/liniei de focus */
    .form-control:focus,
    .lookit-comment-input:focus,
    textarea:focus,
    button:focus {
        outline: none !important;
        box-shadow: none !important;
        border-color: rgba(177, 48, 121, 0.2) !important;
    }

    /* 2. Fundalul roz pentru bula */
    .lookit-comment-bubble {
        background-color: #FDF2F7 !important;
        border: none;
    }

    /* 3. ALINIEREA PERFECTA A BUTOANELOR */
    .action-row {
        line-height: 1 !important; /* Esențial pentru aliniere verticală */
    }

    .date-text {
        font-size: 0.7rem;
        display: inline-flex;
        align-items: center;
    }

    .divider {
        font-size: 0.7rem;
        color: rgba(177, 48, 121, 0.2);
        margin: 0 2px;
    }

    .comment-action-link {
        font-size: 0.75rem;
        font-weight: 700;
        text-decoration: none !important;
        line-height: 1 !important; /* Forțează aceeași înălțime de rând */
        display: inline-flex;
        align-items: center;
        transition: all 0.2s ease;
        vertical-align: baseline; /* Le aliniază pe baza textului */
    }

    .edit-link {
        color: #6c757d;
    }

        .edit-link:hover {
            color: #B13079 !important;
        }

    .delete-link {
        color: #dc3545;
        opacity: 0.7;
    }

        .delete-link:hover {
            opacity: 1;
            text-decoration: underline !important;
        }

    .italic-edit {
        font-style: italic;
        font-size: 0.65rem;
    }
</style>