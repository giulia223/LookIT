@model List<LookIT.Models.FollowRequest>
@{
    ViewData["Title"] = "Cereri de Urmărire";
}

<div class="container mt-4 mb-5" style="max-width: 600px;">

    @* --- 1. HEADER --- *@
    <div class="d-flex align-items-center mb-4">
        <a href="javascript:history.back()" class="btn btn-back shadow-sm me-3">
            <i class="bi bi-chevron-left"></i>
        </a>

        <div class="d-flex align-items-center">
            <h4 class="fw-bold mb-0 text-black">Cereri de urmărire</h4>
            @if (Model.Any())
            {
                <span class="badge rounded-pill ms-2" style="background-color: #B13079;">
                    @Model.Count noi
                </span>
            }
        </div>
    </div>

    @if (!Model.Any())
    {
        @* --- 2. EMPTY STATE --- *@
        <div class="card border-0 shadow-sm rounded-4 py-5 text-center">
            <div class="card-body">
                <div class="empty-state-icon mx-auto mb-4">
                    <i class="bi bi-person-plus"></i>
                </div>
                <h5 class="fw-bold text-black">Totul e la zi</h5>
                <p class="text-muted small">Nu ai nicio cerere de urmărire în așteptare.</p>
            </div>
        </div>
    }
    else
    {
        @* --- 3. LISTA DE CERERI --- *@
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-body p-0">
                @foreach (var req in Model)
                {
                    <div class="request-item d-flex align-items-center justify-content-between p-3 border-bottom">

                        @* INFO UTILIZATOR *@
                        <div class="d-flex align-items-center flex-grow-1 overflow-hidden">
                            <a asp-controller="Profile" asp-action="Details" asp-route-userId="@req.FollowerId" class="text-decoration-none">
                                <img src="@(!string.IsNullOrEmpty(req.Follower.ProfilePictureUrl) ? req.Follower.ProfilePictureUrl : "/images/default-profile.png")"
                                     class="rounded-circle profile-img-request me-3"
                                     alt="Profile">
                            </a>
                            <div class="d-flex flex-column text-truncate">
                                <a asp-controller="Profile" asp-action="Details" asp-route-userId="@req.FollowerId"
                                   class="text-decoration-none text-black fw-bold text-truncate"
                                   style="font-size: 0.95rem;">
                                    @req.Follower.FullName
                                </a>
                                <small class="text-muted" style="font-size: 0.8rem;">
                                    vrea să te urmărească
                                </small>
                            </div>
                        </div>

                        @* BUTOANE ACȚIUNE (VERDE / ROȘU) *@
                        <div class="d-flex gap-2 ms-3">
                            @* Acceptă - Verde *@
                            <form asp-action="HandleRequest" method="post">
                                <input type="hidden" name="requestId" value="@req.Id" />
                                <input type="hidden" name="decision" value="accept" />
                                <button type="submit" class="btn btn-accept-request shadow-sm">
                                    Confirmă
                                </button>
                            </form>

                            @* Șterge - Roșu Soft *@
                            <form asp-action="HandleRequest" method="post">
                                <input type="hidden" name="requestId" value="@req.Id" />
                                <input type="hidden" name="decision" value="decline" />
                                <button type="submit" class="btn btn-decline-request">
                                    Șterge
                                </button>
                            </form>
                        </div>

                    </div>
                }
            </div>
        </div>
    }
</div>


    <style>
        /* Fundal general din paleta ta */
        body {
            background-color: #F7F8FA;
        }

        .text-black {
            color: #1c1e21 !important;
        }

        /* Butonul înapoi gri/alb */
        .btn-back {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            background-color: #ffffff;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #1c1e21;
            transition: all 0.2s;
        }

            .btn-back:hover {
                background-color: #F0F2F5;
                transform: translateX(-3px);
            }

        /* Empty state styling */
        .empty-state-icon {
            width: 90px;
            height: 90px;
            background-color: #FDF2F7;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #B13079;
            font-size: 2.5rem;
        }

        /* Imagine profil */
        .profile-img-request {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border: 2px solid #F0F2F5;
        }

        /* Rândul de cerere */
        .request-item {
            transition: background-color 0.2s ease;
            border-color: #E4E6EB !important;
        }

            .request-item:hover {
                background-color: #F8F9FA;
            }

            .request-item:last-child {
                border-bottom: none !important;
            }

        /* Butoanele de acțiune - Culori funcționale */
        .btn-accept-request {
            background-color: #2E7D32; /* Verde forestier (profesional) */
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 50rem;
            font-size: 0.85rem;
            font-weight: 700;
            transition: all 0.2s;
        }

            .btn-accept-request:hover {
                background-color: #1B5E20;
                transform: translateY(-2px);
            }

        .btn-decline-request {
            background-color: #F0F2F5;
            color: #D32F2F; /* Text roșu */
            border: none;
            padding: 8px 16px;
            border-radius: 50rem;
            font-size: 0.85rem;
            font-weight: 700;
            transition: all 0.2s;
        }

            .btn-decline-request:hover {
                background-color: #FFEBEE; /* Fundal roșu foarte pal la hover */
                color: #C62828;
            }
    </style>
