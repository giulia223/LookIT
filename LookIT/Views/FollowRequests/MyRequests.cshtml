@model List<LookIT.Models.FollowRequest>
@{
    ViewData["Title"] = "Cereri de Urmărire";
}

<div class="container mt-4 mb-5" style="max-width: 600px;">

    @* HEADER *@
    <div class="d-flex align-items-center justify-content-between mb-4 px-2">
        <h4 class="fw-bold mb-0">Cereri de urmărire</h4>
        @if (Model.Any())
        {
            <span class="badge bg-danger rounded-pill">@Model.Count noi</span>
        }
    </div>

    @if (!Model.Any())
    {
        @* STARE GOALĂ (EMPTY STATE) *@
        <div class="text-center py-5 bg-white border-0 shadow-sm rounded-4">
            <div class="mb-3">
                <i class="bi bi-person-check text-muted opacity-25" style="font-size: 4rem;"></i>
            </div>
            <h5 class="fw-bold text-dark">Totul e la zi</h5>
            <p class="text-muted small">Nu ai nicio cerere de urmărire în așteptare.</p>
        </div>
    }
    else
    {
        @* LISTA DE CERERI *@
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-body p-0">
                @foreach (var req in Model)
                {
                    <div class="request-item d-flex align-items-center justify-content-between p-3 border-bottom">

                        @* INFO UTILIZATOR (Stânga) *@
                        <div class="d-flex align-items-center flex-grow-1 overflow-hidden">
                            <a asp-controller="Profile" asp-action="Details" asp-route-userId="@req.FollowerId">
                                <img src="@req.Follower.ProfilePictureUrl"
                                     class="rounded-circle border me-3"
                                     style="width: 48px; height: 48px; object-fit: cover;"
                                     alt="Profile">
                            </a>
                            <div class="d-flex flex-column text-truncate">
                                <a asp-controller="Profile" asp-action="Details" asp-route-userId="@req.FollowerId"
                                   class="text-decoration-none text-dark fw-bold text-truncate"
                                   style="font-size: 0.95rem;">
                                    @req.Follower.FullName
                                </a>
                                <small class="text-muted" style="font-size: 0.8rem;">
                                    vrea să te urmărească
                                </small>
                            </div>
                        </div>

                        @* BUTOANE ACȚIUNE (Dreapta) *@
                        <div class="d-flex gap-2 ms-3">
                            @* BUTON CONFIRMĂ *@
                            <form asp-action="HandleRequest" method="post">
                                <input type="hidden" name="requestId" value="@req.Id" />
                                <input type="hidden" name="decision" value="accept" />
                                <button type="submit" class="btn btn-primary btn-sm px-3 fw-bold rounded-3 shadow-sm" style="min-width: 80px;">
                                    Confirmă
                                </button>
                            </form>

                            @* BUTON ȘTERGE *@
                            <form asp-action="HandleRequest" method="post">
                                <input type="hidden" name="requestId" value="@req.Id" />
                                <input type="hidden" name="decision" value="decline" />
                                <button type="submit" class="btn btn-light border btn-sm px-3 fw-bold rounded-3 text-secondary" style="min-width: 80px;">
                                    Șterge
                                </button>
                            </form>
                        </div>

                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    /* Eliminăm bordura de la ultimul element pentru aspect curat */
    .request-item:last-child {
        border-bottom: none !important;
    }

    /* Efect subtil la hover pe rând */
    .request-item {
        transition: background-color 0.2s ease;
        background-color: #fff;
    }

        .request-item:hover {
            background-color: #fcfcfc;
        }

</style>