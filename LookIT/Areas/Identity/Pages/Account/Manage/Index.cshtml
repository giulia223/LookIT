@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row justify-content-start">
    <div class="col-md-10 col-lg-8">

        @* Card pentru aspect modern, similar cu Register *@
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-4">

                <h4 class="fw-bold mb-3">@ViewData["Title"]</h4>
                <partial name="_StatusMessage" for="StatusMessage" />

                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    @* --- INPUT: USERNAME (Disabled) --- *@
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label small text-muted fw-bold ms-1">UTILIZATOR</label>
                        <div class="input-group">
                            @* Iconița gri (stil global din site.css) *@
                            <span class="input-group-text border-0 rounded-start-3 ps-3">
                                <i class="bi bi-person-badge"></i>
                            </span>
                            @* Input roz (stil global .custom-input-bg) *@
                            <input asp-for="Username" class="form-control custom-input-bg border-0 rounded-end-3 py-2" placeholder="Alege un nume de utilizator" disabled />
                        </div>
                    </div>

                    @* --- INPUT: NUMĂR DE TELEFON --- *@
                    <div class="mb-3">
                        <label asp-for="Input.PhoneNumber" class="form-label small text-muted fw-bold ms-1">TELEFON</label>
                        <div class="input-group">
                            <span class="input-group-text border-0 rounded-start-3 ps-3">
                                <i class="bi bi-telephone"></i>
                            </span>
                            <input asp-for="Input.PhoneNumber" class="form-control custom-input-bg border-0 rounded-end-3 py-2" placeholder="Introduceți numărul de telefon" />
                        </div>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small ms-1"></span>
                    </div>

                    @* --- BUTON SALVARE --- *@
                    <div class="d-grid mt-4">
                        <button id="update-profile-button" type="submit" class="btn btn-primary rounded-pill py-2 fw-bold shadow-sm">
                            Salvează modificările
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}