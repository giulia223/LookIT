@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Date Personale";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row justify-content-start">
    <div class="col-md-10 col-lg-8">

        @* Card container *@
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-4">

                <h4 class="fw-bold mb-3">@ViewData["Title"]</h4>

                <div class="mb-4">
                    <p class="text-muted">
                        Contul tău conține date personale pe care ni le-ai furnizat. Această pagină îți permite să descarci aceste date sau să le ștergi definitiv.
                    </p>
                </div>

                @* --- SECȚIUNEA DOWNLOAD --- *@
                <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-4">
                    <button class="btn btn-primary rounded-pill w-100 py-2 fw-bold shadow-sm" type="submit">
                        <i class="bi bi-cloud-download-fill me-2"></i> Descarcă datele mele
                    </button>
                </form>

                @* --- SECȚIUNEA DELETE (Zona de pericol) --- *@
                <div class="border-top pt-4">
                    <div class="alert alert-light border border-danger-subtle rounded-3 p-3 mb-3">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-exclamation-triangle-fill text-danger fs-5 me-2"></i>
                            <div>
                                <strong class="text-danger">Atenție!</strong>
                                <p class="small text-muted mb-0">
                                    Ștergerea acestor date va elimina permanent contul tău, iar acesta nu va putea fi recuperat.
                                </p>
                            </div>
                        </div>
                    </div>

                    <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger rounded-pill w-100 py-2 fw-bold shadow-sm">
                        <i class="bi bi-trash3-fill me-2"></i> Șterge contul
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}