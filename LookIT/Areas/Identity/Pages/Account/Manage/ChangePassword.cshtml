@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Schimbare parolă";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="row justify-content-start">
    <div class="col-md-10 col-lg-8">

        @* Card alb cu umbră fină *@
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-4">

                <h4 class="fw-bold mb-3">@ViewData["Title"]</h4>
                <partial name="_StatusMessage" for="StatusMessage" />

                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    @* --- PAROLA VECHE --- *@
                    <div class="mb-3">
                        <label asp-for="Input.OldPassword" class="form-label small text-muted fw-bold ms-1">PAROLA ACTUALĂ</label>
                        <div class="input-group">
                            @* Iconiță cheie *@
                            <span class="input-group-text border-0 rounded-start-3 ps-3">
                                <i class="bi bi-key"></i>
                            </span>
                            <input asp-for="Input.OldPassword" class="form-control custom-input-bg border-0 rounded-end-3 py-2" autocomplete="current-password" aria-required="true" placeholder="Introdu parola actuală" />
                        </div>
                        <span asp-validation-for="Input.OldPassword" class="text-danger small ms-1"></span>
                    </div>

                    @* --- PAROLA NOUĂ --- *@
                    <div class="mb-3">
                        <label asp-for="Input.NewPassword" class="form-label small text-muted fw-bold ms-1">PAROLA NOUĂ</label>
                        <div class="input-group">
                            @* Iconiță lacăt *@
                            <span class="input-group-text border-0 rounded-start-3 ps-3">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input asp-for="Input.NewPassword" class="form-control custom-input-bg border-0 rounded-end-3 py-2" autocomplete="new-password" aria-required="true" placeholder="Introdu noua parolă" />
                        </div>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small ms-1"></span>
                    </div>

                    @* --- CONFIRMARE PAROLA --- *@
                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label small text-muted fw-bold ms-1">CONFIRMĂ PAROLA</label>
                        <div class="input-group">
                            @* Iconiță check *@
                            <span class="input-group-text border-0 rounded-start-3 ps-3">
                                <i class="bi bi-check2-circle"></i>
                            </span>
                            <input asp-for="Input.ConfirmPassword" class="form-control custom-input-bg border-0 rounded-end-3 py-2" autocomplete="new-password" aria-required="true" placeholder="Confirmă noua parolă" />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small ms-1"></span>
                    </div>

                    @* --- BUTON UPDATE --- *@
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary rounded-pill py-2 fw-bold shadow-sm">
                            Actualizează parola
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}