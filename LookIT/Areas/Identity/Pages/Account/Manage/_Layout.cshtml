@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container mt-4 mb-5">

    @* titlu si iconita setari *@
    <div class="d-flex align-items-center mb-5 pb-2">

        @* iconita *@
        <div class="bg-white p-3 rounded-circle shadow-sm me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
            <i class="bi bi-gear-fill fs-4" style="color: #B13079;"></i>
        </div>

        @* text titlu *@
        <div>
            <h2 class="fw-bold mb-0">Setări și confidențialitate</h2>
            <p class="text-muted small mb-0">Gestionează profilul, securitatea și preferințele contului tău LookIT</p>
        </div>
    </div>

    @* structura pe doua coloane *@
    <div class="row">

        @* coloana stanga - meniu *@
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-3">
                    <h5 class="fw-bold text-muted ms-3 mt-2 mb-3 small text-uppercase">Contul Tău</h5>
                    @* partial meniu navigare *@
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>

        @* coloana dreapta - continut *@
        <div class="col-md-9">
            @* randare continut specific pagina *@
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}