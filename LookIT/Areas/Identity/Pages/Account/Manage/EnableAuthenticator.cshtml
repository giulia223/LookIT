@page
@model EnableAuthenticatorModel
@{
    ViewData["Title"] = "Configurare aplicație autentificare";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="row justify-content-start">
    <div class="col-md-10 col-lg-8">

        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-4">

                <h4 class="fw-bold mb-3">@ViewData["Title"]</h4>
                <partial name="_StatusMessage" for="StatusMessage" />

                <p class="text-muted mb-4">Parcurge următorii pași pentru a activa securitatea sporită:</p>

                @* pasul 1 - descarcare aplicatie *@
                <div class="mb-4 pb-3 border-bottom">
                    <h5 class="fw-bold" style="color: #B13079;">
                        <span class="badge rounded-pill me-2" style="background-color: #B13079;">1</span>
                        Descarcă aplicația
                    </h5>
                    <p class="small text-muted ms-1">
                        Descarcă o aplicație de autentificare pe telefonul tău:
                    </p>
                    <div class="d-flex flex-wrap gap-3 mt-2 ms-1">
                        <div class="btn-group">
                            <a href="https://go.microsoft.com/fwlink/?Linkid=825072" target="_blank" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-google-play me-1"></i> Microsoft (Android)
                            </a>
                            <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&amp;hl=en" target="_blank" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-google-play me-1"></i> Google (Android)
                            </a>
                        </div>
                        <div class="btn-group">
                            <a href="https://go.microsoft.com/fwlink/?Linkid=825073" target="_blank" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-apple me-1"></i> Microsoft (iOS)
                            </a>
                            <a href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8" target="_blank" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-apple me-1"></i> Google (iOS)
                            </a>
                        </div>
                    </div>
                </div>

                @* pasul 2 - scanare qr sau cheie manuala *@
                <div class="mb-4 pb-3 border-bottom">
                    <h5 class="fw-bold" style="color: #B13079;">
                        <span class="badge rounded-pill me-2" style="background-color: #B13079;">2</span>
                        Scanează codul QR
                    </h5>
                    <p class="small text-muted ms-1">Scanează codul de mai jos cu aplicația descărcată. Dacă nu poți scana, introdu manual cheia.</p>

                    <div class="row align-items-center mt-3">
                        <div class="col-md-5 text-center mb-3 mb-md-0">
                            @* div pentru generare qr code *@
                            <div id="qrCode" class="border p-2 rounded-3 d-inline-block bg-white shadow-sm"></div>
                            <div id="qrCodeData" data-url="@Model.AuthenticatorUri"></div>
                        </div>
                        <div class="col-md-7">
                            <div class="alert custom-input-bg border-0 rounded-3 mb-0">
                                <p class="mb-1 small text-muted fw-bold">CHEIE MANUALĂ:</p>
                                <code class="fs-5 fw-bold text-dark user-select-all">@Model.SharedKey</code>
                                <p class="mb-0 mt-2 small text-muted fst-italic">Spațiile și majusculele nu contează.</p>
                            </div>
                        </div>
                    </div>
                </div>

                @* pasul 3 - verificare cod *@
                <div class="mb-2">
                    <h5 class="fw-bold" style="color: #B13079;">
                        <span class="badge rounded-pill me-2" style="background-color: #B13079;">3</span>
                        Confirmă activarea
                    </h5>
                    <p class="small text-muted ms-1 mb-3">
                        Introdu codul format din 6 cifre generat de aplicație pentru a finaliza configurarea.
                    </p>

                    <div class="row">
                        <div class="col-md-8 col-lg-6">
                            <form id="send-code" method="post">
                                <div class="mb-4">
                                    <label asp-for="Input.Code" class="form-label small text-muted fw-bold ms-1">COD DE VERIFICARE</label>
                                    <div class="input-group">
                                        <span class="input-group-text border-0 rounded-start-3 ps-3">
                                            <i class="bi bi-shield-lock"></i>
                                        </span>
                                        <input asp-for="Input.Code" class="form-control custom-input-bg border-0 rounded-end-3 py-2" autocomplete="off" placeholder="Ex: 123456" />
                                    </div>
                                    <span asp-validation-for="Input.Code" class="text-danger small ms-1"></span>
                                </div>

                                @* butoane actiune *@
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary rounded-pill flex-grow-1 py-2 fw-bold shadow-sm">
                                        Activează
                                    </button>

                                    <a asp-page="./TwoFactorAuthentication" class="btn btn-outline-secondary rounded-pill flex-grow-1 py-2 fw-bold shadow-sm">
                                        Renunță
                                    </a>
                                </div>

                                <div asp-validation-summary="ModelOnly" class="text-danger mt-2 small" role="alert"></div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" src="~/lib/qrcodejs/qrcode.min.js"></script>
    <script type="text/javascript" src="~/js/qr.js"></script>
}