@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Retrimite confirmarea";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            @* AM MODIFICAT AICI: shadow-sm (subtil) în loc de shadow-lg *@
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-5">

                    @* --- HEADER: Iconiță și Titlu --- *@
                    <div class="text-center mb-4">
                        @* Cerc decorativ cu iconiță *@
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3"
                             style="width: 80px; height: 80px; background-color: #FBF1F7;">
                            <i class="bi bi-envelope-paper-heart-fill fs-1" style="color: #B13079;"></i>
                        </div>

                        <h2 class="fw-bold mb-2">Verifică-ți adresa</h2>
                        <p class="text-muted small">
                            Nu ai primit emailul? Introdu adresa ta de email mai jos și îți vom trimite un nou link de activare.
                        </p>
                    </div>

                    @* --- FORMULAR --- *@
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3 small text-center" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Input.Email" class="form-label small text-muted fw-bold ms-1">ADRESĂ DE EMAIL</label>
                            <div class="input-group">
                                @* Iconiță input *@
                                <span class="input-group-text border-0 rounded-start-3 ps-3">
                                    <i class="bi bi-envelope"></i>
                                </span>

                                <input asp-for="Input.Email" class="form-control custom-input-bg border-0 rounded-end-3 py-2" aria-required="true" placeholder="nume@exemplu.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small ms-1"></span>
                        </div>

                        @* Buton Principal *@
                        <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold shadow-sm mb-3">
                            <i class="bi bi-send-fill me-2"></i> Retrimite Emailul
                        </button>
                    </form>

                    @* --- LINK ÎNAPOI --- *@
                    <div class="text-center border-top pt-3">
                        <a asp-page="./Login" class="text-decoration-none fw-bold small text-muted hover-magenta">
                            <i class="bi bi-arrow-left me-1"></i> Înapoi la Autentificare
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}