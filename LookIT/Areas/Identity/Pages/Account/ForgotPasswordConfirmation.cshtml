@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Confirmare recuperare parolă";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-5 text-center">

                    @* iconita si titlu *@
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-4"
                         style="width: 90px; height: 90px; background-color: #FBF1F7;">
                        <i class="bi bi-envelope-check-fill fs-1" style="color: #B13079;"></i>
                    </div>

                    <h2 class="fw-bold mb-3">Verifică-ți Emailul</h2>

                    @* mesaj instructiuni *@
                    <p class="text-muted mb-4 fs-5">
                        Te rugăm să îți verifici adresa de email pentru a reseta parola.
                    </p>

                    <p class="small text-muted mb-4">
                        Dacă nu găsești emailul în <strong>Inbox</strong>, te rugăm să verifici și folderul de <strong>Spam</strong>.
                    </p>

                    @* buton inapoi la login *@
                    <div class="d-grid gap-2 col-md-8 mx-auto">
                        <a asp-page="./Login" class="btn btn-primary rounded-pill py-2 fw-bold shadow-sm">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Înapoi la Autentificare
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>