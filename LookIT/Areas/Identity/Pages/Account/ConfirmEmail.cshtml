@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmare Email";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            @* Card container *@
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-5 text-center">

                    @* --- HEADER: ICONIȚĂ VALIDARE --- *@
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-4"
                         style="width: 90px; height: 90px; background-color: #FBF1F7;">
                        <i class="bi bi-patch-check-fill fs-1" style="color: #B13079;"></i>
                    </div>

                    <h2 class="fw-bold mb-3">@ViewData["Title"]</h2>

                    @* Mesajul de status (succes sau eroare) generat de backend *@
                    <div class="mb-4">
                        <partial name="_StatusMessage" model="Model.StatusMessage" />
                    </div>

                    <p class="text-muted mb-4">
                        Contul tău a fost verificat cu succes. Acum te poți autentifica în aplicație.
                    </p>

                    @* --- BUTON SPRE LOGIN --- *@
                    <div class="d-grid gap-2 col-md-8 mx-auto">
                        <a asp-page="./Login" class="btn btn-primary rounded-pill py-2 fw-bold shadow-sm">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Mergi la Autentificare
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>