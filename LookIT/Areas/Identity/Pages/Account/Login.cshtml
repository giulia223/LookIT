@page
@model LoginModel

@{
    ViewData["Title"] = "Autentificare";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">

                    <div class="text-center mb-4">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="bi bi-person-circle fs-2 text-primary"></i>
                        </div>
                        <h3 class="fw-bold">Bine ai revenit!</h3>
                        <p class="text-muted small">Loghează-te pentru a continua</p>
                    </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        @* --- INPUT: EMAIL --- *@
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label small text-muted fw-bold ms-1">EMAIL</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 rounded-start-3 ps-3">
                                    <i class="bi bi-envelope text-muted"></i>
                                </span>
                                <input asp-for="Input.Email" class="form-control bg-light border-0 rounded-end-3 py-2" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small ms-1"></span>
                        </div>

                        @* --- INPUT: PASSWORD --- *@
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label small text-muted fw-bold ms-1">PAROLA</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 rounded-start-3 ps-3">
                                    <i class="bi bi-lock text-muted"></i>
                                </span>
                                <input asp-for="Input.Password" class="form-control bg-light border-0 rounded-end-3 py-2" autocomplete="current-password" aria-required="true" placeholder="Parolă" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small ms-1"></span>
                        </div>

                        @* --- REMEMBER ME & FORGOT PASSWORD --- *@
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check ms-1">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label small text-muted" asp-for="Input.RememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small fw-bold">Ai uitat parola?</a>
                        </div>

                        @* --- LOGIN BUTTON --- *@
                        <div class="d-grid mb-3">
                            <button id="login-submit" type="submit" class="btn btn-primary rounded-pill py-2 fw-bold shadow-sm">
                                Autentificare
                            </button>
                        </div>

                        @* --- REGISTER LINK --- *@
                        <div class="text-center">
                            <small class="text-muted">Nu ai cont încă? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold">Înregistrează-te</a></small>
                            <div class="mt-2">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none small text-muted">Retrimite email de confirmare</a>
                            </div>
                        </div>
                    </form>

                    @* --- EXTERNAL LOGIN --- *@
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <div class="d-flex align-items-center my-4">
                            <hr class="flex-grow-1 m-0 text-muted">
                            <span class="mx-3 text-muted small text-uppercase">sau</span>
                            <hr class="flex-grow-1 m-0 text-muted">
                        </div>

                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-secondary rounded-pill w-100 mb-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                    <i class="bi bi-box-arrow-in-right me-2"></i> Continuă cu @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}